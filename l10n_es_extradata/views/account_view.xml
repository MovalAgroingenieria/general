<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_tax_template_form" model="ir.ui.view">
        <field name="name">account.tax.template.form</field>
        <field name="model">account.tax.template</field>
        <field name="inherit_id" ref="account.view_account_tax_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="chart_template_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_tax_template_form" model="ir.actions.act_window">
        <field name="name">Taxes templates</field>
        <field name="res_model">account.tax.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" eval="False"/>
        <field name="view_id" ref="account.view_account_tax_template_tree"/>
    </record>
    <menuitem action="action_tax_template_form"
        id="menu_action_tax_template_form"
        parent="account.account_account_menu"/>

</odoo>
