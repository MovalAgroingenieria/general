<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_portrait_standard_notification"
            model="report.paperformat">
        <field name="name">European A4 Portrait Notification</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">44</field>
        <field name="margin_bottom">24</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">38</field>
        <field name="dpi">90</field>
    </record>

    <report id="action_res_notification_report"
            string="Notification"
            model="res.notification"
            report_type="qweb-pdf"
            name="ncm_notifmgmt.report_res_notification"
            paperformat="paperformat_portrait_standard_notification"
            groups="ncm_notifmgmt.group_ncm_user"/>

    <template id="report_res_notification">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <t name="t_call_notification_external_lyout" t-call="ncm_notifmgmt.report_res_notification_external_layout">
                    <div class="page">
                        <t t-call="ncm_notifmgmt.report_res_notification_document"/>
                        <p name="page_break_after_document" style="page-break-after:always;"></p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_res_notification_document">
        <div name="section_rendered_fields">
            <div class="row" name="section_main_page"
                 style="margin-left:10px;margin-right:10px;">
                <span t-field="o.rendered_main_page"></span>
            </div>
            <div class="row" name="section_final_paragraph"
                 style="margin-left:10px;margin-right:10px;margin-top:60px">
                <span t-field="o.rendered_final_paragraph"></span>
            </div>
        </div>
    </template>

    <template id="report_res_notification_external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <t t-call="ncm_notifmgmt.report_res_notification_external_layout_header" />
        <t t-raw="0" />
        <t t-call="ncm_notifmgmt.report_res_notification_external_layout_footer" />
    </template>

    <template id="report_res_notification_external_layout_header">
        <div class="header" name="header_content">
            <div class="row">
                <div class="col-xs-2">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                         style="max-height:130px;max-width:130px;margin-top:4px;margin-bottom:4px;margin-left:4px;"/>
                </div>
                <div class="col-xs-9" style="margin-bottom:6px;">
                    <div name="company_address">
                        <t t-set="company" t-value="company.sudo()"/>
                        <t t-if="company.name">
                            <li style="list-style:none;margin-bottom:6px;">
                                <strong><span t-field="company.name"/></strong>
                            </li>
                        </t>
                        <t t-if="company.vat">
                            <t t-set="mod_vat" t-value="company.vat[2:]"/>
                            <li style="list-style:none;">TIN: <span t-esc="mod_vat"/></li>
                        </t>
                        <t t-if="company.street or company.street2">
                            <li style="list-style:none;">
                                <span t-field="company.street"/>
                                <t t-if="company.street2">
                                    <span t-field="company.street2"/>
                                </t>
                                <t t-if="company.city">
                                    <span t-field="company.city"/>
                                </t>
                                <t t-if="company.zip">
                                    <span t-field="company.zip"/>
                                </t>
                                <t t-if="company.state_id">
                                    <span t-field="company.state_id"/>
                                </t>
                                <t t-if="company.country_id">
                                    <span t-field="company.country_id"/>
                                </t>
                            </li>
                        </t>
                        <t t-if="company.partner_id">
                            <li style="list-style:none;margin-left:2px;width:100%;">
                                <t t-if="company.partner_id.email">
                                    <span class="fa fa-envelope theme-report-color" style="display:inline;">
                                        <t t-set="email" t-value="company.sudo().partner_id.email"/>
                                        <a style="color:black;" href="mailto:email">
                                            <span style="font-size:13px;" t-esc="email"/>
                                         </a>
                                    </span><br/>
                                </t>
                                <t t-if="company.partner_id.website">
                                    <span class="fa fa-globe theme-report-color" style="display:inline;">
                                        <t t-set="website" t-value="company.sudo().partner_id.website"/>
                                        <a class="theme-report-color" href="website">
                                            <span style="font-size:13px;" t-esc="website"/>
                                        </a>
                                    </span><br/>
                                </t>
                                <t t-if="company.partner_id.phone">
                                     <span class="fa fa-phone theme-report-color" style="display:inline;">
                                        <t t-set="phone" t-value="company.sudo().partner_id.phone"/>
                                        <a style="color:black;" href="callto:phone">
                                            <span style="font-size:13px;" t-esc="phone"/>
                                        </a>
                                    </span><br/>
                                </t>
                            </li>
                        </t>
                    </div>
                </div>
            </div>
            <div class="row zero_min_height">
                <div class="col-xs-12">
                    <div style="border-bottom:1px solid black;"/>
                </div>
            </div>
        </div>
    </template>

    <template id="report.minimal_layout">
        <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
        &lt;!DOCTYPE html&gt;
        <html style="height: 0;">
            <head>
                <t t-call-assets="report.assets_pdf" t-js="false"/>
                <t t-call-assets="report.assets_common" t-js="false"/>
                <t t-call-assets="report.assets_pdf" t-css="false"/>
                <t t-call-assets="report.assets_common" t-css="false"/>
                <meta charset="utf-8"/>
                <t t-if="subst is True">
                    <script>
                        function subst() {
                            var vars = {};
                            var x = document.location.search.substring(1).split('&amp;');
                            for (var i in x) {
                                var z = x[i].split('=', 2);
                                vars[z[0]] = unescape(z[1]);
                            }
                            var x=['frompage', 'topage', 'page', 'webpage', 'section', 'subsection', 'subsubsection'];
                            for (var i in x) {
                                var y = document.getElementsByClassName(x[i]);
                                for (var j=0; j&lt;y.length; ++j)
                                    y[j].textContent = vars[x[i]];
                            }
                            var operations = {
                                'single-page': function (elt) {
                                                   elt.style.display = (vars.topage >1) ? "block" : "none";
                                               },
                            };
                            for (var klass in operations) {
                                var y = document.getElementsByClassName(klass);
                                for (var j=0; j&lt;y.length; ++j)
                                    operations[klass](y[j]);
                            }
                        }
                    </script>
                </t>
            </head>
            <body class="container" onload="subst()">
                <t t-raw="body"/>
            </body>
        </html>
    </template>

    <template id="report_res_notification_external_layout_footer">
        <div class="footer" name="footer_content" style="font-size:12;">
            <div class="row" name="pagination">
                <div class="col-xs-12 text-center single-page" name="pages" style="margin-top:15px;">
                    <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

</odoo>