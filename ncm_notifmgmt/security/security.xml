<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

         <record id="ncm_notifmgmt.module_category" model="ir.module.category">
            <field name="name">Notices and Correspondence</field>
         </record>

        <record id="group_ncm_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="ncm_notifmgmt.module_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access in read-only mode to the notifications and the notification sets.</field>
        </record>
                
        <record id="group_ncm_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="ncm_notifmgmt.module_category"/>
            <field name="implied_ids" eval="[(4, ref('group_ncm_user'))]"/>
            <field name="comment">the user will have access in read-write mode to the notifications and the notification sets.</field>
        </record>
                
        <record id="group_ncm_settings" model="res.groups">
            <field name="name">Settings</field>
            <field name="category_id" ref="ncm_notifmgmt.module_category"/>
            <field name="implied_ids" eval="[(4, ref('group_ncm_manager'))]"/>
            <field name="comment">the user will have full access to all models and parameters.</field>
        </record>

        <record model="res.groups" id="base.group_system">
            <field name="implied_ids" eval="[(4, ref('group_ncm_settings'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_ncm_user'))]"/>
        </record>

    </data>

</odoo>