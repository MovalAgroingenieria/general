<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_preview_notification_view_form" model="ir.ui.view">
        <field name="name">Wizard to preview a notification</field>
        <field name="model">wizard.preview.notification</field>
        <field name="arch" type="xml">
            <form string="Preview of the notifications">
                <script>
                    $(document).ready(function(){
                        $('.modal-dialog').css({'width': '940px'});
                    });
                </script>
                <group name="body" col="1">
                    <field name="notification_preview"
                           nolabel="1" readonly="1"/>
                </group>
                <footer>
                    <button string="Close"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>