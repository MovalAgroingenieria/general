<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_notif_config_settings_view_form"
            model="ir.ui.view">
        <field name="name">res.notif.config.settings.view.form</field>
        <field name="model">res.notif.config.settings</field>
        <field name="arch" type="xml">
            <form string="Notification Management Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                     class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                     class="oe_link"/>
                </header>
                <group string="Notification Management"
                       name="notification_management_configuration_group">
                    <field name="sequence_notificationset_code_id"
                           string="Sequence for the codes"
                           options="{'no_quick_create':True,'no_create_edit':True}"
                           style="width:300px"/>
                    <field name="default_notificationset_type_id"
                           string="Default type for the sets"
                           options="{'no_quick_create':True,'no_create_edit':True}"
                           style="width:300px"/>
                    <field name="background_process"
                           string="Background Process"/>
                    <field name="selected_by_default"
                           string="Select notification users by default"/>
                </group>
            </form>
        </field>
    </record>

    <record id="res_notif_config_settings_action"
            model="ir.actions.act_window">
        <field name="name">Configure notification management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.notif.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="parameters_menu"
              name="Parameters"
              parent="configuration_menu"
              sequence="1"
              action="res_notif_config_settings_action"
              groups="base.group_system"/>

</odoo>