<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="law_measuring_config_settings_view_form" model="ir.ui.view">
        <field name="name">Parameters</field>
        <field name="model">law.measuring.configuration</field>
        <field name='inherit_id' ref='law_water_quality.law_measuring_config_settings_view_form'/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='remotecontrol_settings_group']" position="after">
                <group string="Remotecontrol Settings SALZ"
                       name="remotecontrol_settings_group_salz"
                       attrs="{'invisible': [('remotecontrol_enabled', '=', False)]}">
                    <field name="url_remote_api_rest_salz"
                           attrs="{'required': [('remotecontrol_enabled', '=', True)]}"/>
                    <field name="url_remote_api_rest_username_salz"
                           attrs="{'required': [('remotecontrol_enabled', '=', True)]}"/>
                    <field name="url_remote_api_rest_password_salz"
                           attrs="{'required': [('remotecontrol_enabled', '=', True)]}"/>
                    <field name="url_remote_app_salz"
                           attrs="{'required': [('remotecontrol_enabled', '=', True)]}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>