<?xml version="1.0" encoding="utf-8"?>
<odoo>


 <record id="res_partner_partnerlink_action" model="ir.actions.act_window">
        <field name="name">Parcels</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>


    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Partners (form view)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='toggle_active']" position="replace"/>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-logo">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Logo
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-parcel">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Parcel
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-infra">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Infra
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-grape">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Grape
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-quality">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Quality
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-irrigation">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Irrigation
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-irrigation-solid">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Irrigation solid
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-quotas">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Quotas
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-mom">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Mom
                        </span>
                    </div>
                </button>
                <button name="%(res_partner_partnerlink_action)d" type="action" class="oe_stat_button"
                    icon="fa-moval-leaf-npk">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            Fertilizer
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>