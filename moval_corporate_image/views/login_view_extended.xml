<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="login_button_centering" inherit_id="web.login" name="Center Login Button">
    <xpath expr="//div[hasclass('oe_login_buttons')]" position="attributes">
      <attribute name="style">display: flex; justify-content: center;</attribute>
    </xpath>
  </template>

  <template id="login_footer" inherit_id="web.login" name="Login Footer">
    <xpath expr="//form[last()]" position="inside">
      <div class="text-center" style="margin-top: 20px;">
        <img src="/moval_corporate_image/static/description/logo_xmas.gif" style="width: 250px;"/>
      </div>
    </xpath>
  </template>

</odoo>