<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_file_view_form" model="ir.ui.view">
        <field name="name">Files (form view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <field name="id" invisible="1"/>
                <field name="is_cancelled" invisible="1"/>
                <field name="is_blocked" invisible="1"/>
                <header>
                    <button name="action_validate_file"
                            type="object" string="Validate"
                            icon="fa-check"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','!=','01_draft'),
                                                     ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_close_file"
                            type="object" string="Close"
                            icon="fa-times-circle"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','!=','02_inprogress'),
                                                     ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_block_file"
                            type="object" string="Block"
                            icon="fa-lock"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','=','03_closed'),
                                                     ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_unblock_file"
                            type="object" string="Unblock"
                            icon="fa-unlock"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','=','03_closed'),
                                                     ('is_blocked','=',False)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_cancel_file"
                            type="object" string="Cancel"
                            icon="fa-ban"
                            style="width: 105px;"
                            attrs="{'invisible':['|','|',('state','=','03_closed'),
                                                         ('is_cancelled','=',True),
                                                         ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_reactive_file"
                            type="object" string="Reactive"
                            icon="fa-arrow-left"
                            style="width: 105px;"
                            attrs="{'invisible':['|','|',('state','=','03_closed'),
                                                         ('is_cancelled','=',False),
                                                         ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_reactive_file_to_draft"
                            type="object" string="Revert"
                            icon="fa-undo"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','!=','02_inprogress'),
                                                     ('is_blocked','=',True)]}"
                            groups="crm_filemgmt.group_file_manager"/>
                    <button name="action_reactive_file_to_inprogress"
                            type="object" string="Revert"
                            icon="fa-undo"
                            style="width: 105px;"
                            attrs="{'invisible':['|',('state','!=','03_closed'),
                                                     ('is_blocked','=',True)]}"
                            confirm="Are you sure you want to do this operation? The file closing date will be deleted."
                            groups="crm_filemgmt.group_file_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="cancelled_file"
                         style="display: inline-block;color:red;padding-top:10px;"
                         attrs="{'invisible':[('is_cancelled','=',False)]}">
                         C A N C E L L E D
                    </div>
                    <div name="blocked_file"
                         style="display: inline-block;"
                         attrs="{'invisible':[('is_blocked','=',False)]}">
                        <img src="/crm_filemgmt/static/image/img_lock.png"/>
                    </div>
                    <div name="buttons" class="oe_button_box">
                        <button name="action_get_file_registers"
                               type="object" class="oe_stat_button"
                               icon="fa-filemgmt-file-register"
                               attrs="{'invisible': [('number_of_file_registers','=', 0)]}">
                           <div class="o_form_field o_stat_info">
                               <span class="o_stat_value">
                                   <field name="number_of_file_registers"/>
                               </span>
                               <span class="o_stat_text">
                                   <span attrs="{'invisible': [('number_of_file_registers','>', 1)]}"> file register</span>
                                   <span attrs="{'invisible': [('number_of_file_registers','=', 1)]}"> file registers</span>
                               </span>
                           </div>
                       </button>
                    </div>
                    <group name="master_data" col="9">
                        <group name="master_data_image" colspan="3">
                            <field name="image" widget="image"/>
                        </group>
                        <group name="master_data_fields" colspan="6" col="4">
                            <field name="name"
                                   attrs="{'readonly': [('id', '>', 0)]}"/>
                            <field name="date_file" 
                                   attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"/>
                            <field name="subject" colspan="4"
                                   attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"/>
                            <field name="category_id" colspan="4"
                                   attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"/>
                            <field name="container_id" colspan="4"
                                   attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"
                                   context="{'show_container_data': True}"/>
                            <field name="tag_ids" colspan="2" widget="many2many_tags"
                                   attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"/>
                            <field name="closing_date" colspan="2" attrs="{'invisible':[('state','!=','03_closed')]}"/>
                        </group>
                    </group>
                    <group name="slave_data">
                        <notebook name="slave_data_notebook">
                            <page name="partnerlinks_page" string="Partner Links">
                                <field name="partnerlink_ids"
                                       attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"
                                       context="{'tree_view_ref': 'crm_filemgmt.res_file_partnerlink_view_tree'}"/>
                            </page>
                            <page name="filelinks_page" string="File Links">
                                <field name="filelink_ids"
                                       attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"
                                       context="{'tree_view_ref': 'crm_filemgmt.res_file_filelink_view_tree'}"/>
                            </page>
                            <page name="attachments" string="Attachments">
                                <field name="file_attachment_ids" >
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="mimetype"/>
                                        <field name="datas"/>
                                        <field name="create_uid"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="notes_page" string="Notes">
                                <field name="notes"
                                       attrs="{'readonly':['|',('state','=','03_closed'),('is_blocked','=',True)]}"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="res_file_view_tree" model="ir.ui.view">
        <field name="name">Files (tree view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <tree class="o_res_file_view_tree" colors="red:is_cancelled == True;">
                <field name="image" widget="image" invisible="1"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_file"/>
                <field name="subject"/>
                <field name="is_blocked"/>
                <field name="is_cancelled"/>
                <field name="state"/>
                <field name="category_id" invisible="1"/>
                <field name="tag_ids" widget="many2many_tags" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="res_file_view_tree_related" model="ir.ui.view">
        <field name="name">Files (tree related view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <tree class="o_res_file_view_tree" colors="red:is_cancelled == True;"
                create="false" edit="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_file"/>
                <field name="subject"/>
                <field name="is_blocked"/>
                <field name="is_cancelled"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="res_file_view_search" model="ir.ui.view">
        <field name="name">Files (search view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_file"/>
                <field name="subject"/>
                <field name="category_id"/>
                <filter string="Draft" name="state_draft" domain="[('state','=','01_draft')]"/>
                <filter string="In progress" name="state_inprogress" domain="[('state','=','02_inprogress')]"/>
                <filter string="Closed" name="state_closed" domain="[('state','=','03_closed')]"/>
                <separator/>
                <filter string="Blocked: Yes" name="blocked_yes" domain="[('is_blocked','=',True)]"/>
                <filter string="Blocked: No" name="blocked_no" domain="[('is_blocked','=',False)]"/>
                <separator/>
                <filter string="Cancelled: Yes" name="cancelled_yes" domain="[('is_cancelled','=',True)]"/>
                <filter string="Cancelled: No" name="cancelled_no" domain="[('is_cancelled','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="groupby_partner" context="{'group_by':'partner_id'}"/>
                    <filter string="State" name="groupby_state" context="{'group_by':'state'}"/>
                    <filter string="Category" name="groupby_category" context="{'group_by':'category_id'}"/>
                    <filter string="Container" name="groupby_container" context="{'group_by':'container_id'}"/>
                 </group>
            </search>
        </field>
    </record>

    <record id="res_file_view_kanban" model="ir.ui.view">
        <field name="name">Files (kanban view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_file"/>
                <field name="subject"/>
                <field name="state"/>
                <field name="tag_ids"/>
                <field name="image"/>
                <field name="color"/>
                <field name="closing_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown" groups="crm_filemgmt.group_file_user">
                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#">
                                    <span class="fa fa-bars fa-lg"/>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable"><li><a type="edit">Edit File</a></li></t>
                                    <t t-if="widget.deletable"><li><a type="delete">Delete File</a></li></t>
                                    <li>
                                        <ul class="oe_kanban_colorpicker" data-field="color"
                                            style="margin-left: 24px; margin-top: 2px;"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_tags_section">
                                    <field name="tag_ids"/>
                                 </div>
                                <div class="o_kanban_image">
                                    <t t-if="record.image.raw_value">
                                        <img t-att-src="kanban_image('res.file', 'image', record.id.value)"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <br/>
                                    <ul>
                                        <li t-if="record.partner_id.raw_value"  class="o_text_overflow">
                                            <strong><field name="partner_id"/></strong>
                                        </li>
                                        <li>Date: <field name="date_file"/></li>
                                        <li t-if="record.subject.raw_value" class="o_text_overflow">
                                            Subject: <field name="subject"/>
                                         </li>
                                        <li>State: <field name="state"/></li>
                                        <li t-if="record.closing_date.raw_value">
                                            Closing date: <field name="closing_date"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="res_file_view_calendar" model="ir.ui.view">
        <field name="name">Files (calendar view)</field>
        <field name="model">res.file</field>
        <field name="arch" type="xml">
            <calendar string="Files"
                      date_start="date_file"
                      color="category_id"
                      mode="month">
                <field name="subject"/>
                <field name="state"/>
                <field name="partner_id"/>
            </calendar>
        </field>
    </record>

    <record id="res_file_action" model="ir.actions.act_window">
        <field name="name">Files</field>
        <field name="res_model">res.file</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="view_ids"
         eval="[(5, 0),
                (0, 0, {'view_mode': 'tree',
                        'view_id': ref('res_file_view_tree')}),
                (0, 0, {'view_mode': 'form',
                        'view_id': ref('res_file_view_form')})]"/>
        <field name="search_view_id" ref="res_file_view_search"/>
        <field name="context">{'is_cancelled': False}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new file
            </p>
        </field>
    </record>

    <record id="res_file_partnerlink_view_form" model="ir.ui.view">
        <field name="name">File Partnerlink (form view)</field>
        <field name="model">res.file.partnerlink</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <group name="master_data">
                        <field name="file_id"/>
                        <field name="partner_id"/>
                        <field name="is_main"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_file_partnerlink_view_tree" model="ir.ui.view">
        <field name="name">File Partnerlink (tree view)</field>
        <field name="model">res.file.partnerlink</field>
        <field name="arch" type="xml">
            <tree class="o_res_file_partnerlink_view_tree" editable="bottom">
                <field name="partner_id"/>
                <field name="is_main"/>
            </tree>
        </field>
    </record>

    <record id="res_file_partnerlink_of_partner_view_tree" model="ir.ui.view">
        <field name="name">File Partnerlink of partner (tree view)</field>
        <field name="model">res.file.partnerlink</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false" 
                  class="o_res_file_partnerlink_of_partner_view_tree">
                <field name="date_file"/>
                <field name="file_id"/>
                <field name="state"/>
                <field name="is_main"/>
            </tree>
        </field>
    </record>

    <record id="res_file_partnerlink_view_search" model="ir.ui.view">
        <field name="name">File Partnerlink (search view)</field>
        <field name="model">res.file.partnerlink</field>
        <field name="arch" type="xml">
            <search>
                <field name="file_id"/>
            </search>
        </field>
    </record>

    <record id="res_file_filelink_view_form" model="ir.ui.view">
        <field name="name">File filelink (form view)</field>
        <field name="model">res.file.filelink</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <group name="master_data">
                        <field name="file_id"/>
                        <field name="related_file_id"/>
                        <field name="related_file_subject"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_file_filelink_view_tree" model="ir.ui.view">
        <field name="name">File filelink (tree view)</field>
        <field name="model">res.file.filelink</field>
        <field name="arch" type="xml">
            <tree class="o_res_file_filelink_view_tree" editable="bottom">
                <field name="related_file_id"/>
                <field name="related_file_subject"/>
            </tree>
        </field>
    </record>

    <record id="res_file_partnerlink_view_search" model="ir.ui.view">
        <field name="name">File filelink (search view)</field>
        <field name="model">res.file.filelink</field>
        <field name="arch" type="xml">
            <search>
                <field name="file_id"/>
            </search>
        </field>
    </record>

    <menuitem id="files_menu"
              name="Files"
              parent="filemgmt_menu"
              sequence="1"
              action="res_file_action"/>

</odoo>