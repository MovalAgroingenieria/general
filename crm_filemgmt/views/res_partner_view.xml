<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Partners (form view)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="access_file_filemgmt" invisible="1"/>
                <button name="action_get_files"
                        type="object" class="oe_stat_button"
                        icon="fa-filemgmt-files"
                        attrs="{'invisible': ['|', ('number_of_files','=', 0),
                                              ('access_file_filemgmt','!=', True)]}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="number_of_files"/>
                        </span>
                        <span class="o_stat_text">
                            <span attrs="{'invisible': [('number_of_files','>', 1)]}"> file</span>
                            <span attrs="{'invisible': [('number_of_files','=', 1)]}"> files</span>
                        </span>
                    </div>
                </button>
                <button name="action_get_file_registers"
                       type="object" class="oe_stat_button"
                       icon="fa-filemgmt-file-register"
                       attrs="{'invisible': ['|', ('number_of_file_registers','=', 0),
                                              ('access_file_filemgmt','!=', True)]}">
                   <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="number_of_file_registers"/>
                        </span>
                        <span class="o_stat_text">
                            <span attrs="{'invisible': [('number_of_file_registers','>', 1)]}"> file register</span>
                            <span attrs="{'invisible': [('number_of_file_registers','=', 1)]}"> file registers</span>
                        </span>
                   </div>
               </button>
            </xpath>
        </field>
    </record>

</odoo>