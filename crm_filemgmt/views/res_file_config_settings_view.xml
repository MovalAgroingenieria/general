<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="filemgmt_config_settings_view_form" model="ir.ui.view">
        <field name="name">File Management parameters</field>
        <field name="model">res.file.config.settings</field>
        <field name="arch" type="xml">
            <form string="File Management Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                            class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                            class="oe_link"/>
                </header>
                <group string="File Management">
                    <field name="default_annual_seq_prefix"/>
                    <field name="enable_access_file_filemgmt_portal_user"/>
                </group>
            </form>
        </field>
    </record>

    <record id="filemgmt_configuration_action" model="ir.actions.act_window">
        <field name="name">Configure File Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.file.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="parameters_menu"
              name="Parameters"
              parent="configuration_menu"
              sequence="1"
              action="filemgmt_configuration_action"
              groups="base.group_system"/>

</odoo>