<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form view -->
    <record id="suma_bank_payment_line_form" model="ir.ui.view">
        <field name="name">suma.bank.payment.line.form</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="suma_ref"/>
               <field name="suma_sent"/>
            </field>
        </field>
    </record>

    <!-- Tree view -->
    <record id="suma_bank_payment_line_tree" model="ir.ui.view">
        <field name="name">suma.bank.payment.line.tree</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="suma_ref"/>
               <field name="suma_sent" invisible="1"/>
            </field>
        </field>
    </record>

    <!-- Search view -->
    <record id="suma_payment_line_search" model="ir.ui.view">
        <field name="name">suma.payment.line.search</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
               <field name="suma_ref"/>
               <field name="suma_sent"/>
               <filter name="suma_filter" string="SUMA" domain="[('suma_sent','=', True)]"/> 
            </field>
        </field>
    </record>

</odoo>