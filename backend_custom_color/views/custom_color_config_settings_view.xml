<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="custom_color_config_settings_view_form" model="ir.ui.view">
        <field name="name">Backend color settings</field>
        <field name="model">res.custom.theme.color.settings</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                    <button string="Save" type="object"
                        name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object"
                        name="cancel" class="oe_link"/>
                </header>
                <group name="backend_custom_color_config"
                    string="Backend Custom Color" style="width: 50%">
                    <field name="backend_primary_color" widget="colorpicker"/>
                </group>
                <group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_custom_color_config_settings_view_form" model="ir.actions.act_window">
        <field name="name">Backend Custom Color</field>
        <field name="res_model">res.custom.theme.color.settings</field>
        <field name="view_id" ref="custom_color_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem
        name="Backend color"
        id="backend_custom_color_menu"
        parent="base.next_id_2"
        action="action_custom_color_config_settings_view_form"/>

</odoo>