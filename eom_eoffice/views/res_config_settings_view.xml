<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="config_settings_view_form" model="ir.ui.view">
         <field name="name">res.config.settings.view.form.inherit.eom</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='eom_authdnie']" position="inside">
                <group string="Electronic Office" style="display: block; margin-left:20px;">
                    <div style="margin: 0 0 16px 20px;">
                        <label for="sequence_electronicfile_code_id"/>
                        <field name="sequence_electronicfile_code_id"
                            string="Sequence for code"
                            options="{'no_quick_create':True,'no_create_edit':True}"
                            style="width:300px"
                            required="1"/>
                    </div>
                    <div style="margin: 0 0 16px 20px; width:400px;">
                        <label for="deadline" style="float:left;"/>
                        <field name="deadline" required="1" style="width:150px; float:right;"/>
                    </div>
                    <div style="margin: 0 0 16px 20px; width:400px;">
                        <label for="notification_deadline" style="float:left;"/>
                        <field name="notification_deadline" required="1" style="width:150px; float:right;"/>
                    </div>
                    <div style="margin: 0 0 16px 20px; width:400px;">
                        <label for="max_size_attachments" style="float:left;"/>
                        <field name="max_size_attachments" required="1" style="width:150px; float:right;"/>
                    </div>
                    <div style="margin: 0 0 16px 20px; width:400px;">
                        <label for="sign_certificate_path" style="float:left;"/>
                        <field name="sign_certificate_path" style="width:150px; float:right;"/>
                    </div>
                    <div style="margin: 0 0 16px 20px; width:400px;">
                        <label for="sign_certificate_password_path" style="float:left;"/>
                        <field name="sign_certificate_password_path" style="width:150px; float:right;"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>