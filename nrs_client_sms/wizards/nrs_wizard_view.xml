<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SMS wizard -->
        <record model="ir.ui.view" id="nrs_test_wizard_form">
            <field name="name">nrs.wizard.form</field>
            <field name="model">nrs.wizard</field>
            <field name="arch" type="xml">
                <form string="Compose SMS">
                    <field name="is_test_wizard" invisible="1"/>
                    <field name="allow_certify_sms" invisible="1"/>
                    <field name="allow_flash_sms" invisible="1"/>
                    <group>
                        <field name="template_id" style="width: 70%;" context="{'from_wizard': True}"
                            attrs="{'invisible':[('is_test_wizard','=',True)]}"
                            options="{'no_quick_create':True}"/>
                    </group>
                    <group>
                        <group style="width: 54%;">
                            <field name="subject"/>
                        </group>
                        <group style="width: 10%;">
                            <field name="certify" attrs="{'invisible':[('allow_certify_sms', '=', False)]}"/>
                            <field name="sms_flash" attrs="{'invisible':[('allow_flash_sms', '=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="sms_message" style="background-color: #F8F8F8; padding: 10px;
                            border-top-right-radius: 15px; border-top-left-radius: 15px; border-bottom-left-radius: 15px;"/>
                    </group>
                    <footer>
                        <button name="send_sms_action" type="object" class="oe_highlight">
                            <div class="o_form_field">
                                <span class="fa fa-nrs-sms-registre"/>
                                <span style="margin-left:8px;">Send</span>
                            </div>
                        </button>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Confirmation popup -->
        <record model="ir.ui.view" id="nrs_confirmation_form">
            <field name="name">nrs.confirmation.form</field>
            <field name="model">nrs.confirmation</field>
            <field name="arch" type="xml">
                <form string="SMS Confirmation">
                    <group name="nrs_sent_data">
                        <field name="response_code"/>
                        <field name="response_message" groups="base.group_no_one"/>
                    </group>
                    <footer position="replace"><div></div></footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
