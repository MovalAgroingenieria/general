<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="account_move_fixed_concept_view_tree" model="ir.ui.view">
            <field name="name">account.move.fixedconcept.tree</field>
            <field name="model">account.move.fixedconcept</field>
            <field name="arch" type="xml">
                <tree string="Fixed Concepts" editable="bottom" class="o_account_move_fixed_concept_view_tree">
                    <field name="name"/>
                    <field name="extra_field" class="text-center"/>
                    <field name="default" class="text-center"/>
                </tree>
            </field>
        </record>

        <record id="account_move_fixed_concept_view_form" model="ir.ui.view">
            <field name="name">account.move.fixedconcept.form</field>
            <field name="model">account.move.fixedconcept</field>
            <field name="arch" type="xml">
                <form string="Fixed Concept">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="extra_field"/>
                            <field name="default"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_move_fixed_concept_view_search" model="ir.ui.view">
            <field name="name">account.move.fixedconcept.search</field>
            <field name="model">account.move.fixedconcept</field>
            <field name="arch" type="xml">
                <search string="Fixed Concepts">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_account_move_fixed_concept" model="ir.actions.act_window">
            <field name="name">Fixed Concepts</field>
            <field name="res_model">account.move.fixedconcept</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new fixed concept</p>
                <p>Fixed concepts are used in Invoice without details reports</p>
            </field>
        </record>

        <menuitem
            id="menu_action_fixed_concept"
            action="action_account_move_fixed_concept"
            parent="account.account_invoicing_menu"
            groups="account.group_account_manager"
        />

</odoo>
