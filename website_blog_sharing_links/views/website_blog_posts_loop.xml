<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="posts_loop" inherit_id="website_blog.posts_loop">
        <xpath expr="//div[@t-attf-class=&quot;o_wblog_normalize_font #{'card-footer px-2 pb-2' if opt_blog_cards_design else 'pr-2 pb-2'}&quot;]" position="after">
            <div class="o_sharing_links">
                <a class="fa fa-twitter-square o_twitter blog_share_list"></a>
                <a class="fa fa-facebook-square o_facebook blog_share_list"></a>
                <a class="fa fa-linkedin-square o_linkedin blog_share_list"></a>
            </div>
        </xpath>
    </template>

</odoo>
