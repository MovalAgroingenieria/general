<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="hr_timesheet_rule_request_user" model="ir.rule">
            <field name="name">Users are allowed to access timesheets related to a followed request</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="domain_force">
                [('maintenance_request_id', '!=', False)]
            </field>
            <field name="groups" eval="[(4, ref('base_maintenance_config.group_maintenance_user'))]"/>
        </record>
        <record id="hr_timesheet_rule_request_manager" model="ir.rule">
            <field name="name">Managers are allowed to access timesheets related to any request</field>
            <field name="model_id" ref="model_account_analytic_line"/>
            <field name="domain_force">
                [('maintenance_request_id', '!=', False)]
            </field>
            <field name="groups" eval="[(4, ref('base_maintenance_config.group_maintenance_manager'))]"/>
        </record>
    </data>
</odoo>
