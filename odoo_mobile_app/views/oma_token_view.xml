<odoo>
    <record id="oma_token_tree_view" model="ir.ui.view">
        <field name="name">oma.token.tree</field>
        <field name="model">oma.token</field>
        <field name="arch" type="xml">
            <tree edit="0" create="0">
                <field name="name"/>
                <field name="device_type"/>
            </tree>
        </field>
    </record>

    <record id="oma_token_form_view" model="ir.ui.view">
        <field name="name">oma.token.form</field>
        <field name="model">oma.token</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" string="Token">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="device_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="oma_token_action" model="ir.actions.act_window">
        <field name="name">Tokens</field>
        <field name="res_model">oma.token</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
</odoo>