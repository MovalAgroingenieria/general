<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="oma_config_settings_view_form" model="ir.ui.view">
        <field name="name">Parameters</field>
        <field name="model">oma.configuration</field>
        <field name="arch" type="xml">
            <form string="Firebase API Settings" class="oe_form_configuration">
                <header>
                <button string="Apply" type="object" name="execute"
                    class="oe_highlight"/>
                <button string="Cancel" type="object" name="cancel"
                    class="oe_link"/>
                </header>
                <group name="firebase_api_settings" string="Firebase API Settings">
                    <field name="firebase_credentials_filename" invisible="1"/>
                    <field name="firebase_credentials" filename="firebase_credentials_filename"/>
                    <field name="firebase_project_id"/>
                    <field name="fcm_endpoint"/>
                </group>
            </form>
        </field>
    </record>

    <record id="oma_configuration_action" model="ir.actions.act_window">
        <field name="name">Firebase Configurations</field>
        <field name="res_model">oma.configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>

