<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Mail template for fax -->
    <record id="email_fax_template" model="mail.template">
        <field name="name">Fax Mail</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="auto_delete" eval="True"/>
        <field name="email_from">resgistred.account@service.com</field>
        <field name="body_html"><![CDATA[<div>This is the cover page. The fax has to be attached.</div>]]></field>
    </record>

    <!-- Droplist action (res.partner) -->
    <act_window id="action_send_fax"
        name="Send Fax"
        res_model="mail.compose.message"
        src_model="res.partner"
        key2="client_action_multi"
        view_mode="form"
        target="new"
        context="{'default_use_template': True,
                  'default_template_id': ref('email_fax_template'),
                 }"/>

</odoo>