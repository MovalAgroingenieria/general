<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_task_form_limited_access" model="ir.ui.view">
        <field name="name">project.task.form.limited.access</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="project_privacy_visibility" position="after">
                <field name="restricted_user_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="sale_timesheet.view_task_form2_inherit_sale_timesheet" model="ir.ui.view">
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="hr_timesheet.view_task_form2_inherited" model="ir.ui.view">
        <field name="groups_id" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>



</odoo>
