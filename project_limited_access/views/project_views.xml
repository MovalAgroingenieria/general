<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_project_form_limited_access" model="ir.ui.view">
        <field name="name">project.form.limited.access</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="privacy_visibility" position="after">
                <field name="restricted_user_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="project.menu_main_pm" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>

    <record id="project.menu_project_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>

</odoo>
