<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_portal_project_user" model="res.groups">
        <field name="name">Portal Project User</field>
        <field name="share" eval="False"/>
        <field name="category_id"
               ref="base.module_category_user_type"/>
    </record>

    <record id="project_restricted_user_rule" model="ir.rule">
        <field name="name">Project Restricted User Access</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[
            ('restricted_user_ids', 'in', user.id),
        ]</field>
        <field name="groups" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>

    <record id="project_task_restricted_user_rule" model="ir.rule">
        <field name="name">Project Task Restricted User Access</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[
            ('restricted_user_ids', 'in', user.id),
        ]</field>
        <field name="groups" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>

    <record id="account_analytic_line_restricted_user_rule" model="ir.rule">
        <field name="name">Account Analytic Line Restricted User Access</field>
        <field name="model_id" ref="account.model_account_analytic_line"/>
        <field name="domain_force">[
            ('employee_id.user_id', '=', user.id)
        ]</field>
        <field name="groups" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>

    <record id="hr_employee_portal_user_rule" model="ir.rule">
        <field name="name">Portal User Access to Employees</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">
            [('user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('project_limited_access.group_portal_project_user'))]"/>
    </record>


</odoo>