<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Add separate fields for street type</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_street_number.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='street_name']" position="before">
                <field name="street_type" class="oe_edit_only oe_inline"
                    style="max-width: 44px; float: left; margin-right: 2%;"
                    placeholder="Street type..."/>
                <field name="street_type_show" class="o_address_street_name oe_read_only"
                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
            </xpath>

            <xpath expr="//field[@name='street_name']" position="attributes">
                <attribute name="class"></attribute>
                <attribute name="style">margin-right: 2%; width: 72%;</attribute>
            </xpath>

            <xpath expr="//field[@name='street_number']" position="replace">
                <field name="street_number" class="text-right oe_edit_only"
                    style="float: right; margin-right: 0%; width: 10%;" placeholder="Number..."/>
                <field name="street_number_show" class="text-right oe_read_only"
                    style="margin-right: 4%; width: 12%;"/>
            </xpath>

        </field>
    </record>

</odoo>