<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="backend_config_settings_view_form" model="ir.ui.view">
        <field name="name">Backend settings</field>
        <field name="model">res.backend.settings</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" special="cancel" class="oe_link"/>
                    <button string="Restore Defaults"
                        type="object" name="restore_defaults" class="oe_highlight"/>
                </header>
                <group name="backend_colors">
                    <group>
                        <field name="backend_primary_color" widget="colorpicker">
                            <span style="font-size: 0.8em;">
                                <strong>@brand-primary</strong> and <strong>@brand-info</strong>.
                                It will affect many objects. Some colors do not fit very well and
                                transparency may not have the expected effect.
                            </span>
                        </field>
                    </group>
                    <group>
                        <field name="sidebar_background_color" widget="colorpicker">
                            <span style="font-size: 0.8em;">
                                <strong>@grey-base</strong>. Default is black. Affects some shadows
                                in addition to the sidebar's background.
                            </span>
                        </field>
                    </group>
                    <group>
                        <field name="report_motive_color" widget="colorpicker">
                            <span style="font-size: 0.8em;">
                                <strong>class report-color</strong>. A CSS class that can be used to color-code reports
                                equal/similar to the main theme.
                            </span>
                        </field>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_backend_config_settings_view_form" model="ir.actions.act_window">
        <field name="name">Backend Settings</field>
        <field name="res_model">res.backend.settings</field>
        <field name="view_id" ref="backend_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem
        name="Backend Settings"
        id="backend_settings_menu"
        parent="base.next_id_2"
        action="action_backend_config_settings_view_form"/>

</odoo>