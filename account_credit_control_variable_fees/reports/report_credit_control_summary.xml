<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_credit_control_summary_document_variable_fees"
        inherit_id="account_credit_control.report_credit_control_summary_document">

        <xpath expr="//t[@t-if='doc.current_policy_level.custom_text_after_details']" position="after">
            <table class="table table-condensed" id="summary_table_with_variable_fees" style="margin-top:20px;">
                <thead>
                    <tr>
                        <th name="invoice_number">Invoice number</th>
                        <th name="debt_amount" class="text-right">Debt amount</th>
                        <th name="variable_fees_amount" class="text-right">
                            <span>Fees amount (<span t-field="doc.variable_fees_percentage"/> %)</span>
                        </th>
                        <th name="total_amount" class="text-right">Total amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.credit_control_line_ids" t-as="l">
                        <t name="invoice_number" t-if="l.invoice_id">
                            <td>
                                <span t-field="l.invoice_id.number"/>
                                <t t-if="l.invoice_id.name">
                                    <span t-field="l.invoice_id.name"/>
                                </t>
                            </td>
                        </t>
                        <t name="invoice_number_2" t-if="not l.invoice_id">
                            <td>
                                <span t-field="l.move_line_id.name"/>
                            </td>
                        </t>
                        <td name="debt_amount" class="text-right">
                            <span t-field="l.balance_due"
                                t-options='{"widget": "monetary", "display_currency": l.currency_id or l.company_id.currency_id}'/>
                        </td>
                        <td name="variable_fees_amount" class="text-right">
                            <span t-field="l.variable_fees"
                                t-options='{"widget": "monetary", "display_currency": l.currency_id or l.company_id.currency_id}'/>
                        </td>
                        <td name="total_amount" class="text-right">
                            <span t-field="l.total_amount_with_fees"
                                t-options='{"widget": "monetary", "display_currency": l.currency_id or l.company_id.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <t t-if="doc.current_policy_level.custom_text_after_variable_fees">
                <div class="row mt32 mb32">
                    <div class="col-xs-12">
                        <p t-field="doc.current_policy_level.custom_text_after_variable_fees"/>
                    </div>
                </div>
            </t>
        </xpath>

    </template>
</odoo>
