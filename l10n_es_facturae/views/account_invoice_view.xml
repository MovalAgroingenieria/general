<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <button name="action_invoice_draft" position="before">
                <button name="action_integrations" type="object"
                        string="Integrate"
                        groups="account.group_account_invoice"
                        attrs="{'invisible':['|',('state','=','draft'),('can_integrate', '=', False)]}"/>
                <field name="can_integrate" invisible="1"/>
            </button>
            <field name="type" position="before">
                <div name="button_box" class="oe_button_box">
                    <button
                        type="object"
                        name="action_view_integrations"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible':['|',('state','=','draft'), ('integration_count', '==', 0)]}">
                        <field name="integration_count" widget="statinfo"
                               string="Integrations"/>
                        <field name="integration_ids" invisible="1"/>
                    </button>
                </div>
            </field>
            <xpath expr="/form/sheet/notebook" position="inside">
                 <page string="FACe" name="face">
                    <group style="width:50%;">
                        <field name="facturae_receiver_transaction_reference"
                            attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="facturae_receiver_contract_reference"
                            attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="round_decimal"/>
                        <field name="service_date"/>
                    </group>

                    <!-- To fix, if one is not None, it will fail to set both to None -->
                    <group string="Invoice period" style="width:50%">
                        <field name="start_date"
                               attrs="{'required':[('end_date','!=',False)]}"/>
                        <field name="end_date"
                               attrs="{'required':[('start_date','!=',False)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
