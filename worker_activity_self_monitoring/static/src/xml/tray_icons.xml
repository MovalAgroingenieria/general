<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Este es el que vamos a usar para el primero-->
    <templates>
        <t t-name="TrayIcon">
            <div class="o_tray_icon_container">
                <div id="attendance_status_icon" class="o_tray_icon gray_circle">
                    <span class="fa fa-clock-o"/>
                </div>
            </div>
        </t>
    </templates>

    <templates id="attendance_tray_clock">
        <t t-name="AttendanceClock">
            <li class="o_mail_navbar_item">
                <div class="o_attendance_clock">
                    <button class="o_button o_button_icon o_button_light" type="button">
                        <i class="fa fa-clock-o"/>
                    </button>
                </div>
            </li>
        </t>
    </templates>

    <templates id="task_tray_button">
        <t t-name="TaskButton">
            <li class="o_mail_navbar_item">
                <div class="o_task_buttons">
                    <button class="o_button o_button_icon o_button_light" type="button">
                        <i class="fa fa-file-text-o"/>
                    </button>
                </div>
            </li>
        </t>
    </templates>

    <templates id="task_tray_clock">
        <t t-name="TaskClock">
            <li class="o_mail_navbar_item">
                <div class="o_task_clock">
                    <button class="o_button o_button_icon o_button_light" type="button">
                        <i class="fa fa-clock-o"/>
                    </button>
                </div>
            </li>
        </t>
    </templates>

</odoo>