<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="law_measuring_config_settings_view_form" model="ir.ui.view">
        <field name="name">Parameters</field>
        <field name="model">law.measuring.configuration</field>
        <field name="arch" type="xml">
            <form string="Measuring Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                     class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                     class="oe_link"/>
                </header>
            </form>
        </field>
    </record>

    <record id="law_measuring_configuration_action"
            model="ir.actions.act_window">
        <field name="name">Configure Measuring</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">law.measuring.configuration</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

</odoo>