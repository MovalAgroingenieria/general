<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="law_analysis_parameter_view_search" model="ir.ui.view">
        <field name="name">LAW Analysis Parameter (search view)</field>
        <field name="model">law.analysis.parameter</field>
        <field name="arch" type="xml">
            <search>
                <field name="analysis_id"/>
                <field name="parameter_id"/>
                <field name="analysis_procedure"/>
                <field name="collection_time"/>
                <filter name="parameter_above_mav"
                        string="Result above VMA"
                        domain="[('parameter_above_mav', '=', True)]"/>
                <filter name="analysis_id"
                        string="Analysis"
                        context="{'group_by': 'analysis_id'}"/>
                <filter name="parameter_id"
                        string="Parameter"
                        context="{'group_by': 'parameter_id'}"/>
                <filter name="parameter_uom_id"
                        string="Measurement Unit"
                        context="{'group_by': 'parameter_uom_id'}"/>
                <filter name="collection_time"
                        string="Collection Time"
                        context="{'group_by': 'collection_time'}"/>
            </search>
        </field>
    </record>

    <record id="law_analysis_parameter_view_tree" model="ir.ui.view">
        <field name="name">LAW Analysis Parameter (tree view)</field>
        <field name="model">law.analysis.parameter</field>
        <field name="arch" type="xml">
            <tree class="o_law_water_quality_analysis_parameter_tree"
                  colors="red:parameter_value_above_mav==True"
                  create="false" edit="false" delete="false">
                <field name="analysis_id"/>
                <field name="parameter_id"/>
                <field name="parameter_uom_id"/>
                <field name="result_value"/>
                <field name="parameter_maximum_value_admissible" string="Maximum Value Admissible"/>
                <field name="collection_time"/>
                <field name="notes"/>
                <field name="parameter_value_above_mav" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="law_analysis_parameter_view_pivot" model="ir.ui.view">
        <field name="name">LAW Analysis Parameter (pivot view)</field>
         <field name="model">law.analysis.parameter</field>
         <field name="arch" type="xml">
             <pivot string="Analysis Parameter">
                 <field name="analysis_id" type="row"/>
                 <field name="parameter_id" type="row"/>
                 <field name="collection_time" type="col"/>
                 <field name="result_value" type="measure"/>
                 <field name="parameter_maximum_value_admissible" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="law_analysis_parameter_view_graph" model="ir.ui.view">
        <field name="name">LAW Analysis Parameter (graph view)</field>
        <field name="model">law.analysis.parameter</field>
        <field name="arch" type="xml">
            <graph string="Analysis Parameter">
                <field name="analysis_id"/>
                <field name="parameter_id"/>
                <field name="result_value"/>
                <field name="parameter_maximum_value_admissible"/>
            </graph>
        </field>
    </record>

     <record id="law_analysis_parameter_view_calendar" model="ir.ui.view">
        <field name="name">Laboratory Analysis for Waters (calendar view)</field>
        <field name="model">law.analysis</field>
        <field name="arch" type="xml">
            <calendar date_start="collection_time"
                      date_stop="receival_time"
                      color="laboratory_id"
                      mode="month"
                      display="[name]">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record id="law_analysis_parameter_action" model="ir.actions.act_window">
        <field name="name">Analysis Parameters</field>
        <field name="res_model">law.analysis.parameter</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="view_ids"
         eval="[(5, 0),
                (0, 0, {'view_mode': 'tree',
                        'view_id': ref('law_analysis_parameter_view_tree')}),
                (0, 0, {'view_mode': 'calendar',
                        'view_id': ref('law_analysis_parameter_view_calendar')}),
                (0, 0, {'view_mode': 'pivot',
                        'view_id': ref('law_analysis_parameter_view_pivot')}),
                (0, 0, {'view_mode': 'graph',
                        'view_id': ref('law_analysis_parameter_view_graph')})
                ]"/>
    </record>

</odoo>