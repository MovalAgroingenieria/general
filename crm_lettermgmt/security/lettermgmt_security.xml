<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="crm_lettermgmt.module_category" model="ir.module.category">
            <field name="name">Letter Management</field>
        </record>

        <record id="crm_lettermgmt.group_crm_lettermgmt_portal" model="res.groups">
            <field name="name">Portal</field>
            <field name="category_id" ref="crm_lettermgmt.module_category"/>
        </record>

        <record id="crm_lettermgmt.group_crm_lettermgmt_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="crm_lettermgmt.module_category"/>
        </record>

        <record id="crm_lettermgmt.group_crm_lettermgmt_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="crm_lettermgmt.module_category"/>
            <field name="implied_ids" eval="[(4, ref('crm_lettermgmt.group_crm_lettermgmt_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

    </data>
</odoo>
