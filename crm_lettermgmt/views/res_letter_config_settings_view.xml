<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="lettermgmt_config_settings_view_form" model="ir.ui.view">
        <field name="name">Register Management parameters</field>
        <field name="model">res.letter.config.settings</field>
        <field name="arch" type="xml">
            <form string="Register Management Settings" class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                            class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                            class="oe_link"/>
                </header>
                <group string="Register Management">
                    <field name="enable_access_res_letter_portal_user"/>
                    <field name="allow_number_edition"/>
                </group>
            </form>
        </field>
    </record>

    <record id="lettermgmt_configuration_action" model="ir.actions.act_window">
        <field name="name">Configure Register Management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.letter.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="register_parameters_menu"
              name="Parameters"
              parent="letter_log_config_menu"
              sequence="1"
              action="lettermgmt_configuration_action"
              groups="base.group_system"/>

</odoo>