<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="mail.template" id="email_template_res_letter">
            <field name="name">Registre Mail</field>
            <field name="model_id" ref="model_res_letter"/>
            <field name="subject">Registre ${object.number} - ${object.sender_partner_id.company_id.name}</field>
            <field name="email_from">${(user.company_id.email) | safe}</field>
            <field name="email_to">${ctx.partner_email}</field>
            <field name="lang">${object.sender_partner_id.lang or 'es_ES'}</field>
            <field name="auto_delete">True</field>
            <field name="body_html">
                <![CDATA[
                <p> ${ctx.get('optional_text')}</p>
                ]]>
            </field>
        </record>
    </data>

</odoo>
