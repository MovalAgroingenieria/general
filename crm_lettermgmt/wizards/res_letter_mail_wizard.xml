<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_letter_mail_wizard_form" model="ir.ui.view">
        <field name="name">Registre email wizard (form view)</field>
        <field name="model">res.letter.mail.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Email">
                <script>
                    $(document).ready(function(){
                        $('.modal-dialog').css({'height': '380px'});
                    });
                </script>
                <sheet>
                    <group>
                        <field name="optional_text"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                        <button string="Send" type="object" class="oe_highlight"
                            name="action_send_mails"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>