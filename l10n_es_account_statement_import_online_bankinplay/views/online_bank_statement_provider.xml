<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="online_bank_statement_provider_form">
        <field name="name">online.bank.statement.provider.form</field>
        <field name="model">online.bank.statement.provider</field>
        <field
            name="inherit_id"
            ref="account_statement_import_online.online_bank_statement_provider_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main']" position="inside">
                <group
                    name="bankinplay"
                    string="Bankinplay Config"
                    attrs="{'invisible':[('service','!=','bankinplay')]}"
                >
                    <field name="bankinplay_delay_days"/>
                    <field name="bankinplay_end_point_type"/>
                    <field name="bankinplay_end_point" attrs="{'invisible':[('bankinplay_end_point_type','=','same_endpoint')]}"/>
                    <field name="username" string="API Key" attrs="{'invisible':[('bankinplay_end_point_type','!=','same_endpoint')]}"/>
                    <field name="password" string="API Secret" attrs="{'invisible':[('bankinplay_end_point_type','!=','same_endpoint')]}"/>
                    <field name="bankinplay_date_field"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
