<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_account_type_form" model="ir.ui.view">
      <field name="name">account.account.type.form.inherit</field>
      <field name="model">account.account.type</field>
      <field name="inherit_id" ref="account.view_account_type_form"/>
      <field name="arch" type="xml">
        <field name="include_initial_balance" position="after">
          <field name="group_by" string="Group By"/>
        </field>
      </field>
    </record>

    <record id="view_account_type_tree" model="ir.ui.view">
      <field name="name">group_by.account_type_tree</field>
      <field name="model">account.account.type</field>
      <field name="inherit_id" ref="account.view_account_type_tree" />
      <field name="arch"  type="xml">
          <field name="type" position="after">
              <field name="group_by" string="Group By"/>
          </field>
      </field>
    </record>

    <record id="view_account_group_form" model="ir.ui.view">
      <field name="name">account.group.form.inherit</field>
      <field name="model">account.group</field>
      <field name="inherit_id" ref="account.view_account_group_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="account_group_01_id" string="Group Level 1"/>
        </field>
      </field>
    </record>


  </data>
</odoo>