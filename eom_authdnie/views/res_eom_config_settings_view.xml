<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_eom_config_settings_view_form"
            model="ir.ui.view">
        <field name="name">res.eom.config.settings.view.form</field>
        <field name="model">res.eom.config.settings</field>
        <field name="arch" type="xml">
            <form string="Electronic-Office Settings"
                  class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute"
                     class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel"
                     class="oe_link"/>
                </header>
                <group string="Electronic-Office Management"
                       name="electronic_office_management_configuration_group">
                    <field name="editable_notes"
                           string="Editable Notes (y/n)"/>
                </group>
            </form>
        </field>
    </record>

    <record id="res_eom_config_settings_action"
            model="ir.actions.act_window">
        <field name="name">Configure electronic office management</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.eom.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="parameters_menu"
              name="Parameters"
              parent="configuration_menu"
              sequence="1"
              action="res_eom_config_settings_action"
              groups="eom_authdnie.group_eom_settings"/>

</odoo>
