<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SMS wizard -->
        <record model="ir.ui.view" id="wausms_test_wizard_form">
            <field name="name">wausms.wizard.form</field>
            <field name="model">wausms.wizard</field>
            <field name="arch" type="xml">
                <form string="WauSMS">
                    <field name="is_test_wizard" invisible="1"/>
                    <group>
                        <field name="template_id" style="width: 50%;"
                            attrs="{'invisible':[('is_test_wizard','=',True)]}"/>
                    </group>
                    <group>
                        <field name="subject" style="width: 50%;"/>
                        <field name="sms_message" style="background-color: #F8F8F8; padding: 10px;
                            border-top-right-radius: 15px; border-top-left-radius: 15px; border-bottom-left-radius: 15px;"/>
                    </group>
                    <footer>
                        <button name="send_sms_action" type="object" class="oe_highlight">
                            <div class="o_form_field">
                                <span class="fa fa-envelope"/>
                                <span style="margin-left:8px;">Send</span>
                            </div>
                        </button>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Confirmation popup -->
        <record model="ir.ui.view" id="wausms_confirmation_form">
            <field name="name">wausms.confirmation.form</field>
            <field name="model">wausms.confirmation</field>
            <field name="arch" type="xml">
                <form string="WauSMS Confirmation">
                    <group name="wausms_sent_data">
                        <field name="response_code"/>
                        <field name="response_message" groups="base.group_no_one"/>
                    </group>
                    <footer position="replace"><div></div></footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
