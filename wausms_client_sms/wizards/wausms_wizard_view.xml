<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SMS wizard -->
        <record model="ir.ui.view" id="wausms_test_wizard_form">
            <field name="name">wausms.wizard.form</field>
            <field name="model">wausms.wizard</field>
            <field name="arch" type="xml">
                <form string="WauSMS">
                    <group name="wausms_send_data">
                        <field name="sender" style="width: 50%;"/>
                        <field name="sms_message"/>
                    </group>
                    <div style="font-size: 10px;">
                        The maximum size is 160 characters. The message will be sent in ASCII, so the special characters will not be displayed.
                     </div>
                    <footer>
                        <button string="Send SMS" name="send_sms_action" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Confirmation popup -->
        <record model="ir.ui.view" id="wausms_confirmation_form">
            <field name="name">wausms.confirmation.form</field>
            <field name="model">wausms.confirmation</field>
            <field name="arch" type="xml">
                <form string="WauSMS Confirmation">
                    <group name="wausms_sent_data">
                        <field name="response_code"/>
                        <field name="response_message" groups="base.group_no_one"/>
                    </group>
                    <footer position="replace"><div></div></footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
