<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Test wizard action -->
    <record id="action_wausms_test_wizard" model="ir.actions.act_window">
        <field name="name">WuaSMS compose SMS</field>
        <field name="res_model">wausms.wizard</field>
        <field name="src_model">wausms.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="context">{'mode': 'test'}</field>
        <field name="target">new</field>
    </record>

    <!-- Droplist action (res.partner) -->
    <act_window id="action_wausms_wizard"
        name="Send SMS"
        res_model="wausms.wizard"
        src_model="res.partner"
        key2="client_action_multi"
        view_mode="form"
        target="new"
        groups="wausms_client_sms.group_send_wausms_sms"/>

    <!-- Menuentry -->
    <menuitem name="Test SMS" id="wausms_sms_test_menu" parent="wausms_root_menu"
        action="action_wausms_test_wizard"/>

</odoo>