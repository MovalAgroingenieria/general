<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree view -->
    <record id="wausms_tracking_view_tree" model="ir.ui.view">
        <field name="name">WauSMS Tracking Tree</field>
        <field name="model">wausms.tracking</field>
        <field name="arch" type="xml">
            <tree string="SMS" create="false" duplicate="false"
                colors="green:response_code=='202';
                        orange:response_code=='207';
                        red:response_code=='400';
                        red:response_code=='401';
                        red:response_code=='402';
                        red:response_code=='500';">
                <field name="response_code" invisible="1"/>
                <field name="sms_time_data"/>
                <field name="user_id"/>
                <field name="sender"/>
                <field name="partner_id" string="To"/>
                <field name="invoice_id"/>
                <field name="subject"/>
                <field name="sms_confirmation"/>
                <field name="sms_message"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="wausms_tracking_view_form" model="ir.ui.view">
        <field name="name">WauSMS Tracking Form</field>
        <field name="model">wausms.tracking</field>
        <field name="arch" type="xml">
            <form string="SMS" create="false" duplicate="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="wausms_sms_id"/>
                        </h1>
                        <div class="o_row">
                            <field name="sms_confirmation"/>
                        </div>
                    </div>
                    <group>
                        <group name="shipping_info" string="Shipping info">
                            <field name="wausms_url"/>
                            <field name="wausms_user"/>
                            <!-- <field name="credentials"/> -->
                            <field name="user_id"/>
                            <field name="sms_time_data"/>
                            <field name="phone_number"/>
                        </group>
                        <group name="sms_info" string="SMS info">
                            <field name="sender"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="subject"/>
                            <field name="response_code"/>
                            <field name="sms_confirmation_info"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="sms_message_tab" string="SMS message">
                            <field name="sms_message"/>
                        </page>
                        <page name="response_message_tab" string="Response message">
                            <field name="response_message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="wausms_tracking_view_search" model="ir.ui.view">
        <field name="name">WauSMS Tracking Search</field>
        <field name="model">wausms.tracking</field>
        <field name="arch" type="xml">
            <search string="SMS">
                <field name="wausms_sms_id"/>
                <field name="sms_confirmation"/>
                <field name="wausms_url"/>
                <field name="wausms_user"/>
                <field name="credentials"/>
                <field name="user_id"/>
                <field name="sms_time_data"/>
                <field name="phone_number"/>
                <field name="sender"/>
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="subject"/>
                <field name="response_code"/>
                <field name="sms_confirmation_info"/>
                <field name="sms_message"/>
                <field name="response_message"/>
                <filter string="Confirmation: Accepted" name="confirmation_accepted"
                    domain="[('response_code','=','202')]"/>
                <filter string="Confirmation: Not accepted" name="confirmation_no_accepted"
                    domain="[('response_code','!=','202')]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="user_filter"
                        context="{'group_by':'user_id'}"/>
                    <filter string="Confirmation" name="sms_confirm_filter"
                        context="{'group_by':'sms_confirmation'}"/>
                    <filter string="To" name="to_partner"
                        context="{'group_by':'partner_id'}"/>
                    <filter string="Subject" name="subject_filter"
                        context="{'group_by':'subject'}"/>
                        <filter string="Sender" name="sender_filter"
                        context="{'group_by':'sender'}"/>
                    <filter string="Subject" name="subject_filter"
                        context="{'group_by':'subject'}"/>
                    <filter string="Date" name="sms_time_data_filter"
                        context="{'group_by':'sms_time_data'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_wausms_tracking_tree" model="ir.actions.act_window">
        <field name="name">WauSMS Tracking</field>
        <field name="res_model">wausms.tracking</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field ref="wausms_tracking_view_tree" name="view_id"/>
        <field name="search_view_id" ref="wausms_tracking_view_search"/>
    </record>

    <!-- Menuentry -->
    <menuitem name="Tracking SMS" id="wausms_sms_tracking_menu" parent="wausms_root_menu"
        action="action_wausms_tracking_tree"/>
        <!-- groups="wausms_client_sms.group_wausms_manager" -->

</odoo>