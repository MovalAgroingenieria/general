<odoo>

    <record id="view_hr_employee_feedback_note_search" model="ir.ui.view">
        <field name="name">hr.employee.feedback.note.search</field>
        <field name="model">hr.employee.feedback.note</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="author_id"/>
                <field name="note_type_id"/>
                <field name="date"/>

                <filter string="Active" name="filter_active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active','=',False)]"/>
                <filter string="Drafts" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="Closed" name="filter_done" domain="[('state','=','registered')]"/>

                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Author" name="group_author" context="{'group_by': 'author_id'}"/>
                    <filter string="Note Type" name="group_note_type" context="{'group_by': 'note_type_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

  <record id="view_hr_employee_feedback_note_tree" model="ir.ui.view">
      <field name="name">hr.employee.feedback.note.tree</field>
      <field name="model">hr.employee.feedback.note</field>
      <field name="arch" type="xml">
          <tree>
              <field name="date"/>
              <field name="employee_id"/>
              <field name="note_type_id"/>
              <field name="name"/>
              <field name="author_id"/>
              <field name="state"/>
          </tree>
      </field>
  </record>

  <record id="view_hr_employee_feedback_note_form" model="ir.ui.view">
      <field name="name">hr.employee.feedback.note.form</field>
      <field name="model">hr.employee.feedback.note</field>
      <field name="arch" type="xml">
          <form>
              <header>
                  <field name="state" widget="statusbar" statusbar_visible="draft,registered,archived"/>
              </header>
              <sheet>
                  <group>
                      <field name="name"/>
                      <field name="employee_id"/>
                      <field name="author_id"/>
                      <field name="date"/>
                      <field name="note_type_id"/>
                      <field name="note_text"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>
</odoo>
