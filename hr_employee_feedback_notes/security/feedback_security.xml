<odoo>
    <record id="module_category_human_resources_feedback_notes" model="ir.module.category">
      <field name="name">Feedback Notes</field>
      <field name="parent_id" ref="base.module_category_human_resources"/>
      <field name="sequence">18</field>
    </record>

    <record id="model_hr_employee_feedback_note" model="ir.model">
      <field name="name">hr.employee.feedback.note</field>
      <field name="model">hr.employee.feedback.note</field>
      <field name="state">base</field>
    </record>

  <record id="group_hr_feedback_manager" model="res.groups">
      <field name="name">Feedback Manager</field>
      <field name="category_id" ref="module_category_human_resources_feedback_notes"/>
  </record>

  <record id="feedback_note_rule" model="ir.rule">
      <field name="name">HR Feedback Rule</field>
      <field name="model_id" ref="model_hr_employee_feedback_note"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('hr_employee_feedback_notes.group_hr_feedback_manager'))]"/>
  </record>
</odoo>