<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Gis Table Form View -->
    <record id="gis_table_view_form" model="ir.ui.view">
        <field name="name">GIS Table Form</field>
        <field name="model">gis.table</field>
        <field name="arch" type="xml">
            <form duplicate="0" delete="0">
                <header>
                    <button name="action_drop_table"
                            type="object"
                            string="Drop Table"
                            attrs="{'invisible': [('id', '=', False)]}"
                            confirm="WARNING: This will also delete the gis table if exists, are you sure?"/>
                    <button name="action_sync_table"
                            type="object"
                            string="Sync Table"
                            style="margin-top:2px; margin-bottom:2px;"
                            attrs="{'invisible': [('id', '=', False)]}" />
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <field name="readonly" invisible="1"/>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('readonly', '=', True)]}"/>
                            <field name="description"/>
                            <field name="is_synced"/>
                            <field name="related_model_id"/>
                            <field name="relation_field_id" domain="[('model_id', '=', related_model_id)]"/>
                            <field name="relation_gis_field_id" domain="[('gis_table_id', '=', id)]"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Fields">
                            <header>
                                <button name="action_import_fields_from_db"
                                        type="object"
                                        string="Import from DB"
                                        icon="fa-download"
                                        class="btn btn-link"
                                        style="margin-top:2px; margin-bottom:2px;" />
                                <button name="action_push_fields_to_db"
                                        type="object"
                                        string="Push to DB"
                                        icon="fa-upload"
                                        class="btn btn-link"
                                        style="margin-top:2px; margin-bottom:2px;" />
                            </header>
                            <field name="field_ids">
                                <tree editable="bottom">
                                    <field name="id" invisible="1"/>
                                    <field name="name" attrs="{'readonly': [('id', '>', 0), ('readonly', '=', True)]}"/>
                                    <field name="field_type" attrs="{'readonly': [('id', '>', 0), ('readonly', '=', True)]}"/>
                                    <field name="required" attrs="{'readonly': [('id', '>', 0), ('readonly', '=', True)]}"/>
                                    <field name="readonly"/>
                                    <field name="is_synced"/>
                                    <field name="geometry_type" attrs="{'readonly': [('id', '>', 0), ('readonly', '=', True)]}"/>
                                    <field name="epsg" attrs="{'readonly': [('id', '>', 0), ('readonly', '=', True)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Gis Table Tree View -->
    <record id="gis_table_view_tree" model="ir.ui.view">
        <field name="name">GIS Table Tree</field>
        <field name="model">gis.table</field>
        <field name="arch" type="xml">
            <tree string="GIS Tables" delete="0">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Gis Table Search View -->
    <record id="gis_table_view_search" model="ir.ui.view">
        <field name="name">GIS Table Search</field>
        <field name="model">gis.table</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Action for GIS Tables -->
    <record id="action_gis_table" model="ir.actions.act_window">
        <field name="name">GIS Tables</field>
        <field name="res_model">gis.table</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="gis_table_view_search"/>
    </record>

     <record id="action_load_gis_tables_from_db" model="ir.actions.server">
        <field name="name">Load GIS Tables from DB</field>
        <field name="model_id" ref="model_gis_table"/>
        <field name="state">code</field>
        <field name="code">model.load_gis_tables_from_db()</field>
    </record>

    <!-- Menu for GIS Tables -->
    <menuitem id="gis_table_menu" name="GIS Tables" parent="gistable_root_menu" action="action_gis_table" sequence="1"/>
    <menuitem id="gis_table_load_menu" name="Load GIS Tables from DB" parent="gistable_root_menu" action="action_load_gis_tables_from_db" sequence="2"/>

</odoo>