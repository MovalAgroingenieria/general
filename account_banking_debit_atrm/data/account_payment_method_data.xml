<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Add ATRM payment method -->
        <record id="payment_method_atrm" model="account.payment.method">
            <field name="name">Tax Agency of the Region of Murcia (ATRM)</field>
            <field name="code">debit_atrm</field>
            <field name="payment_type">inbound</field>
            <field name="prefix">atrm_</field>
            <field name="bank_account_required">False</field>
            <field name="mandate_required">False</field>
            <!-- Force id (needed to add payment mode)
            <field name="id">6</field> -->
        </record>

        <!-- Add ATRM payment mode -->
        <!-- @INFO: this has to be created with the name ATRM (mandatory) -->
        <!-- crear con ref en vez de id para asociar paymement method. Y crear journal fixed
        <record id="payment_method_atrm" model="account.payment.mode">
            <field name="name">ATRM</field>
            <field name="payment_method_code">debit_atrm</field>
            <field name="payment_type">inbound</field>
            <field name="bank_account_link">fixed</field>
            <field name="default_invoice">False</field>
            <field name="default_date_type">due</field>
            <field name="no_debit_before_maturity">False</field>
            <field name="generate_move">True</field>
            <field name="payment_order_ok">True</field>
            <field name="post_move">True</field>
            <field name="move_option">date</field>
            <field name="default_target_move">posted</field>
            <!- - Variable fields - ->
            <field name="payment_method_id">6</field>
            <field name="fixed_journal_id">8</field>
        </record>
        -->

        <!-- Sequence for shipment_num variable -->
        <record model="ir.sequence" id="atrm_seq_shipment_num">
            <field name="name">Shipment Number for ATRM</field>
            <field name="code">atrm_seq_shipment_number</field>
            <field name="prefix"></field>
            <field name="padding">5</field>
        </record>

        <!-- Sequence for fix_number variable -->
        <record model="ir.sequence" id="atrm_seq_fix_num">
            <field name="name">Fix Number for ATRM</field>
            <field name="code">atrm_seq_fix_number</field>
            <field name="prefix"></field>
            <field name="padding">13</field>
        </record>

        <!-- Set default agency -->
        <record id="agency_code" model="ir.config_parameter">
            <field name="model">account.config.settings</field>
            <field name="name">agency_code</field>
            <field name="key">default</field>
            <field name="key2"></field>
            <field name="value">S&apos;001&apos;&#10;p1&#10;.</field>
        </record>

    </data>
</odoo>