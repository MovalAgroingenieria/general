<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">Invoices (form view)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']/group/group" position="after">
                <group>
                    <field name="in_atrm" string="ATRM"/>
                    <field name="atrm_ref"/>
                    <field name="atrm_rejected"/>
                    <field name="atrm_leave_requested"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="invoice_tree" model="ir.ui.view">
        <field name="name">Invoices (tree view)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="class">o_account_banking_debit_atrm_invoice_tree_view</attribute>
            </xpath>
            <xpath expr="//field[@name='type']" position="after">
                <field name="in_atrm" string="ATRM"/>
                <field name="atrm_ref" string="ATRM Ref" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">Invoices (search view)</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unpaid']" position="before">
                <field name="atrm_ref"/>
                <filter name="atrm_done" string="ATRM" domain="[('in_atrm', '=', True)]"/>
                <separator/>
            </xpath>
            <xpath expr="//filter[@name='status']" position="before">
                <filter name="group_by_atrm" string="ATRM" context="{'group_by':'in_atrm'}"/>
                <filter name="group_by_atrm_rejected" string="ATRM Rejected" context="{'group_by':'atrm_rejected'}"/>
            </xpath>
        </field>
    </record>

</odoo>
