<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="login_form_inherit" inherit_id="web.login" name="Client Connect Login">
    <xpath expr="//div[@class='clearfix oe_login_buttons']" position="before">


      <!-- Compulsory: Contact Mail -->
      <label class="control-label" for="mail">Contact Mail <span style="color: #757575;">
        (Compulsory)</span></label>
      <div class="form-group field-mail">
        <input type="text" name="mail" t-att-value="mail" id="mail" class="form-control"
          required="required" autofocus="autofocus" autocapitalize="off" />
      </div>

      <!-- Optional: Phone Number -->
      <label class="control-label" for="phone">Phone Number <span style="color: #757575;">(Optional)</span></label>
      <div class="form-group field-phone">
        <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control"
          required="required" autofocus="autofocus" autocapitalize="off" />
      </div>

      <!-- Optional : Company Name -->
      <label class="control-label" for="company">Company Name <span style="color: #757575;">
        (Optional)</span></label>
      <div class="form-group field-company">
        <input type="text" name="company" t-att-value="company" id="company" class="form-control"
          required="required" autofocus="autofocus" autocapitalize="off" />
      </div>

      <!-- Optional : Country -->
      <label class="control-label" for="country">Country <span style="color: #757575;">(Optional)</span></label>
      <div class="form-group field-country">
        <input type="text" name="country" t-att-value="country" id="country" class="form-control"
          required="required" autofocus="autofocus" autocapitalize="off" />
      </div>
    </xpath>
  </template>

  <!-- Remove the Odoo normal fields -->
  <!--
  <template id="login_layout_no_login_fields" inherit_id="web.login" name="Login Layout Fields">
    <xpath expr="//div[hasclass('field-login')]" position="attributes">
      <attribute name="style">display:none;</attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-password')]" position="attributes">
      <attribute name="style">display:none;</attribute>
    </xpath>
  </template>
  -->

  <!-- Remove the manage databases and Odoo publicity -->
  <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Hide Footer">
    <xpath expr="//div[@class='text-center' and @t-if='not disable_footer']" position="attributes">
      <attribute name="style">display:none;</attribute>
    </xpath>
  </template>

  <!-- Fill out the user and password field from the URL -->
  <template id="login_form_prefill" inherit_id="web.login" name="Login Form Prefill">
    <xpath expr="//form" position="inside">
      <script type="text/javascript" src="/client_connect/static/src/js/login_prefill.js"></script>
    </xpath>
  </template>

  <!-- Solve the logo distance to top -->
  <template id="add_br_above_company_logo" inherit_id="web.login_layout"
    name="Add Break Above Company Logo">
    <xpath expr="//div[contains(@class, 'text-center')]/img" position="before">
      <br/>
      <br/>
      <br/>
    </xpath>
    <xpath expr="//div[contains(@class, 'text-center')]/img" position="after">
      <br/>
      <br/>
    </xpath>
  </template>

  <!-- Center the login button -->
  <template inherit_id="web.login_layout" name="Center Login Button">
    <xpath expr="//div[hasclass('oe_login_buttons')]" position="attributes">
      <attribute name="style">text-align: center;</attribute>
    </xpath>
  </template>

</odoo>