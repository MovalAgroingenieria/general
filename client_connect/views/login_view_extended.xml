<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="login_form_inherit" inherit_id="web.login" name="Client Connect Login">
    <xpath expr="//form" position="inside">
      <div class="form-group field-login">
        <input type="text" name="login" id="login" required="required" autofocus="autofocus" />
      </div>
      <div class="form-group field-password">
        <input type="password" name="password" id="password" required="required" />
      </div>

      <!-- Campo obligatorio: Número de teléfono -->
      <div class="form-group field-phone">
        <input type="text" name="phone" id="phone" placeholder="Número de teléfono"
          required="required" />
      </div>

      <!-- Campo opcional: Empresa -->
      <div class="form-group field-company">
        <input type="text" name="company" id="company" placeholder="Empresa" />
      </div>
    </xpath>
  </template>

</odoo>