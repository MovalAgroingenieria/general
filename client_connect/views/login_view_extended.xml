    </xpath>
    <xpath expr="//div[hasclass('field-password')]" position="attributes">
      <attribute name="style">display:none;</attribute>
    </xpath>
  </template>
  -->

  <!-- Remove the manage databases and Odoo publicity -->
  <template id="login_layout_no_db" inherit_id="web.login_layout" name="Login Hide Footer">
    <xpath expr="//div[@class='text-center' and @t-if='not disable_footer']" position="attributes">
      <attribute name="style">display:none;</attribute>
    </xpath>
  </template>

  <!-- Fill out the user and password field from the URL -->
  <template id="login_form_prefill" inherit_id="web.login" name="Login Form Prefill">
    <xpath expr="//form" position="inside">
      <script type="text/javascript" src="/client_connect/static/src/js/login_prefill.js"></script>
    </xpath>
  </template>

  <!-- Solve the logo distance to top -->
  <template id="add_br_above_company_logo" inherit_id="web.login_layout"
    name="Add Break Above Company Logo">
    <xpath expr="//div[contains(@class, 'text-center')]/img" position="before">
      <br/>
      <br/>
      <br/>
    </xpath>
    <xpath expr="//div[contains(@class, 'text-center')]/img" position="after">
      <br/>
      <br/>
    </xpath>
  </template>

  <!-- Center the login button -->
  <template id="login_button_centering" inherit_id="web.login"
    name="Center Login Button">
    <xpath expr="//div[hasclass('oe_login_buttons')]" position="attributes">
      <attribute name="style">display: flex; justify-content: center;</attribute>
    </xpath>
  </template>

  <!-- Add the promotional text and image to the bottom -->
  <template id="login_footer" inherit_id="web.login"
    name="Login Footer">
    <xpath expr="//form[last()]" position="inside">
      <!--
      <div class="text-center" style="margin-top: 20px;">
        <img src="/client_connect/static/description/logo.png" style="width: 100px;"/>
      </div>
      -->
      <div class="text-center" style="margin-top: 20px;">
        <img src="/client_connect/static/description/logo_xmas.gif" style="width: 250px;"/>
      </div>
    </xpath>
  </template>

</odoo>