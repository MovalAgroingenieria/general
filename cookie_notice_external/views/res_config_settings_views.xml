<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cookie</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_maps']" position="after">
                <div class="o_setting_right_pane">
                    <label for="cookie_service_script" string="Cookie notice config"/>
                    <div class="text-muted">
                        Url for script
                    </div>
                    <div class="content-group">
                        <div class="row mt16">
                            <label class="col-lg-3 o_light_label" string="Name" for="cookie_service_script"/>
                            <field name="cookie_service_script" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
