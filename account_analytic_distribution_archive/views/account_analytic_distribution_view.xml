<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="account_analytic_distribution_form" model="ir.ui.view">
        <field name="name">account.analytic.distribution.archive.form</field>
        <field name="model">account.analytic.distribution</field>
        <field name="inherit_id" ref="account_analytic_distribution.account_analytic_distribution_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/group" position="before">
                <div name="buttons" class="oe_button_box">
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_distribution_search" model="ir.ui.view">
        <field name="name">account.analytic.distribution.archive.search</field>
        <field name="model">account.analytic.distribution</field>
        <field name="inherit_id" ref="account_analytic_distribution.account_analytic_distribution_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </xpath>
        </field>
    </record>

</odoo>
