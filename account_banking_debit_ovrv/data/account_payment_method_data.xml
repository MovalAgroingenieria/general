<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Add OVRv payment method -->
        <record id="payment_method_ovrv" model="account.payment.method">
            <field name="name">Virtual Collection Office of Valencia (OVRv)</field>
            <field name="code">debit_ovrv</field>
            <field name="payment_type">inbound</field>
            <field name="prefix">ovrv_</field>
            <field name="bank_account_required">False</field>
            <field name="mandate_required">False</field>
        </record>

        <!-- Sequence for r51_fix_number variable -->
        <record model="ir.sequence" id="ovrv_r51_fix_num">
            <field name="name">R51 Fix Number for OVRv</field>
            <field name="code">ovrv_seq_r51_fix_number</field>
            <field name="prefix"></field>
            <field name="padding">20</field>
        </record>

    </data>
</odoo>