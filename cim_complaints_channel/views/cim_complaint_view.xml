<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cim_complaint_view_form" model="ir.ui.view">
        <field name="name">cim.complaint.view.form</field>
        <field name="model">cim.complaint</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <field name="id" invisible="1"/>
                <field name="setted_sequence" invisible="1"/>
                <field name="deadline_state" invisible="1"/>
                <field name="is_rejected" invisible="1"/>
                <field name="is_acknowledgement_expired" invisible="1"/>
                <field name="document_01_name" invisible="1"/>
                <field name="document_02_name" invisible="1"/>
                <field name="document_03_name" invisible="1"/>
                <field name="document_04_name" invisible="1"/>
                <field name="document_05_name" invisible="1"/>
                <field name="document_06_name" invisible="1"/>
                <header>
                    <button name="action_go_to_state_02_admitted" type="object"
                            string="Admit"
                            style="width: 125px;"
                            icon="fa-sign-in"
                            attrs="{'invisible': ['|',('state','!=','01_received'),('is_rejected','=',True)]}"
                            groups="cim_complaints_channel.group_cim_manager"
                            confirm="This action will change to the 'Admitted' state. Proceed?"/>
                    <button name="action_reject" type="object"
                            string="Reject"
                            style="width: 125px;"
                            icon="fa-ban"
                            attrs="{'invisible': ['|',('state','!=','01_received'),('is_rejected','=',True)]}"
                            groups="cim_complaints_channel.group_cim_manager"/>
                    <!-- Provisional -->
                    <button name="action_go_to_state_05_resolved" type="object"
                            string="Resolve"
                            style="width: 125px;"
                            icon="fa-gavel"
                            attrs="{'invisible': ['|',('state','!=','01_received'),('is_rejected','=',True)]}"
                            groups="cim_complaints_channel.group_cim_manager"
                            confirm="This action will change to the 'Resolved' state. Proceed?"/>
                    <!-- Provisional -->
                    <button name="action_return_to_state_01_received" type="object"
                            string="BACK"
                            style="width: 125px;"
                            attrs="{'invisible': ['|',('state','!=','05_resolved'),('is_rejected','=',True)]}"
                            groups="cim_complaints_channel.group_cim_manager"
                            confirm="This action will change to the 'Received' state. Proceed?"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="01_received,02_admitted,03_in_progress,04_ready,05_resolved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_communications"
                                type="object" class="oe_stat_button"
                                icon="fa-envelope"
                                groups="cim_complaints_channel.group_cim_restricted">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value" style="display:inline">
                                    <field name="number_of_communications"/>
                                </span>
                                <span class="o_stat_text"
                                      style="display:inline;margin-bottom:2px;margin-left:2px">
                                    Commu-
                                </span>
                                <span class="o_stat_text">nications</span>
                            </div>
                        </button>
                    </div>
                    <div name="div_code" class="oe_title">
                        <h1>
                            <field name="name"
                                   style="width:320px"
                                   placeholder="Code"
                                   attrs="{'readonly': ['|', ('id','>',0), ('setted_sequence','=',True)]}"/>
                        </h1>
                        <div>
                            <field name="complaint_type_id"
                                   style="width:320px"
                                   placeholder="Complaint Type"/>
                        </div>
                    </div>
                    <group name="group_01" style="margin-top:-10px">
                        <group name="group_01_left" col="50">
                            <div colspan="49">
                                <group name="group_01_left_inner">
                                    <field name="issue" nolabel="1" colspan="2"
                                           placeholder="Issue"/>
                                    <div name="group_01_left_check" colspan="2"
                                         style="margin-top:14px">
                                        <field name="is_anonymous"
                                               nolabel="1"/>
                                        <span style="margin-left:5px">Anonymous Complaint</span><br/>
                                        <div style="margin-bottom:8px"/>
                                        <field name="is_delegated"
                                               nolabel="1"/>
                                        <span style="margin-left:5px">Data entered by instructor</span>
                                    </div>
                                </group>
                            </div>
                            <div colspan="1"/>
                        </group>
                        <group name="group_01_right" col="50">
                            <div colspan="1"/>
                            <div colspan="49">
                                <group name="group_01_right_inner">
                                    <div name="group_01_right_title" colspan="2"
                                         class="text-center"
                                         style="margin-bottom:15px">
                                        <span style="font-weight:bold"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '01_on_time')]}">
                                            INSTRUCTION ON TIME
                                        </span>
                                        <span style="padding:5px;font-weight:bold;background-color:#ff8c00;color:#ffffff"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '02_upcoming_expiration')]}">
                                            (instruction deadline soon to expire)
                                        </span>
                                        <span style="padding:5px;font-weight:bold;background-color:#dc143c;color:#ffffff"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '03_expirated')]}">
                                            (instruction period expirated)
                                        </span>
                                        <span style="font-weight:bold"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '04_extended')]}">
                                            INSTRUCTION ON TIME (EXTENDED)
                                        </span>
                                        <span style="padding:5px;font-weight:bold;background-color:#ff8c00;color:#ffffff"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '05_extended_upcoming_expiration')]}">
                                            (extended instruction deadline soon to expire)
                                        </span>
                                        <span style="padding:5px;font-weight:bold;background-color:#dc143c;color:#ffffff"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '06_extended_expirated')]}">
                                            (extended instruction period expirated)
                                        </span>
                                        <span style="font-weight:bold"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '07_finished')]}">
                                            INSTRUCTION FINISHED
                                        </span>
                                        <span style="padding:5px;font-weight:bold;background-color:#2f4f4f;color:#ffffff"
                                              attrs="{'invisible': ['|', ('is_acknowledgement_expired', '=', True), ('deadline_state', '!=', '99_rejected')]}">
                                            (instruction rejected)
                                        </span>
                                        <span style="font-weight:bold" class="blink_text"
                                              attrs="{'invisible': [('is_acknowledgement_expired', '=', False)]}">
                                            (acknowledgement expirated)
                                        </span>
                                    </div>
                                    <field name="investigating_user_id"
                                           string="Instructor"/>
                                    <field name="creation_date"
                                           string="Creation Date"/>
                                    <field name="deadline_date"
                                           string="Deadline Date"
                                           attrs="{'invisible': [('state', '=', '05_resolved')]}"/>
                                    <field name="expected_resolution_date"
                                           string="Resolution Date"
                                           attrs="{'invisible': [('state', '!=', '05_resolved')]}"/>
                                </group>
                            </div>
                        </group>
                    </group>
                    <group name="group_02" style="margin-top:-10px">
                        <group name="group_02_left" col="50">
                            <div colspan="49">
                                <group name="group_02_left_inner">
                                    <div name="group_02_left_inner_title"
                                         colspan="2"
                                         style="text-align:center;margin-bottom:5px">
                                        <span style="font-weight:bold">
                                        FACTS DENOUNCED
                                        </span>
                                    </div>
                                    <div name="section_description"
                                         colspan="2"
                                         class="panel-body"
                                         style="background:#fbfbfb;border-color:#cccccc;border-width:1px;border-style:solid;margin:0 auto;margin-bottom:20px;min-height:75px">
                                        <field name="description" nolabel="1"
                                               style="margin-top:5px;min-height:55px"/>
                                    </div>
                                    <field name="defendant_name"
                                           string="Defendant"/>
                                    <field name="complaint_frequency"
                                           string="When did it happen?"/>
                                    <field name="complaint_time"
                                           string="Date and Time"
                                           attrs="{'invisible': [('complaint_frequency', '!=', '02_specific_day')],
                                                   'required': [('complaint_frequency', '=', '02_specific_day')]}"/>
                                    <field name="infringement_level"
                                           string="Infringement Level"/>
                                    <field name="is_juditial_action"
                                           string="With juditial action"/>
                                    <div name="group_02_left_inner_complainant_data" colspan="2"
                                         class="text-center"
                                         style="font-weight:bold;margin-top:16px;margin-bottom:16px"
                                         groups="cim_complaints_channel.group_cim_user">
                                        <span>COMPLAINANT DATA</span>
                                    </div>
                                    <field name="complainant_name"
                                           string="Name"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="link_type_id"
                                           string="Link Type"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="is_complainant_involved"
                                           string="Is involved?"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="complainant_vat"
                                           string="VAT"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="complainant_phone"
                                           string="Phone"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="complainant_email"
                                           string="E-mail"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                    <field name="tracking_code"
                                           string="Tracking Code"
                                           groups="cim_complaints_channel.group_cim_user"/>
                                </group>
                            </div>
                            <div colspan="1"/>
                        </group>
                        <group name="group_02_right" col="50">
                            <div colspan="1"/>
                            <div colspan="49">
                                <group name="group_02_right_inner"
                                       attrs="{'invisible': [('is_rejected', '=', True)]}">
                                    <div name="group_02_right_inner_title_1"
                                         colspan="2"
                                         style="text-align:center;margin-bottom:5px">
                                        <span style="font-weight:bold">
                                        MEASURES TAKEN
                                        </span>
                                    </div>
                                    <div name="section_measures_taken"
                                         colspan="2"
                                         class="panel-body"
                                         style="background:#fbfbfb;border-color:#cccccc;border-width:1px;border-style:solid;margin:0 auto;margin-bottom:20px;min-height:150px">
                                        <field name="measures_taken" nolabel="1"
                                               style="margin-top:5px;min-height:170px"/>
                                    </div>
                                    <div name="group_02_right_inner_title_2"
                                         colspan="2"
                                         style="text-align:center;margin-bottom:5px">
                                        <span style="font-weight:bold">
                                        WITNESSES
                                        </span>
                                    </div>
                                    <div name="section_witness_name"
                                         colspan="2"
                                         class="panel-body"
                                         style="background:#fbfbfb;border-color:#cccccc;border-width:1px;border-style:solid;margin:0 auto;min-height:75px">
                                        <field name="witness_name" nolabel="1"
                                               style="margin-top:5px;min-height:55px"/>
                                    </div>
                                </group>
                                <group name="group_02_right_inner_rejected"
                                       attrs="{'invisible': [('is_rejected', '=', False)]}">
                                    <div name="group_02_right_inner_rejected_title_1"
                                         colspan="2"
                                         style="text-align:center;margin-bottom:5px">
                                        <span style="font-weight:bold">
                                        REJECTION CAUSE
                                        </span>
                                    </div>
                                    <div name="section_rejection_cause"
                                         colspan="2"
                                         class="panel-body"
                                         style="background:#fbfbfb;border-color:#cccccc;border-width:1px;border-style:solid;margin:0 auto;margin-bottom:20px;min-height:75px">
                                        <field name="rejection_cause" nolabel="1"
                                               style="margin-top:5px;min-height:55px"/>
                                    </div>
                                </group>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="documents" string="Documents">
                            <group name="documents">
                                <group name="documents_left">
                                    <field name="document_01"
                                           filename="document_01_name"
                                           string="Document #1"/>
                                    <field name="document_02"
                                           filename="document_02_name"
                                           string="Document #2"/>
                                    <field name="document_03"
                                           filename="document_03_name"
                                           string="Document #3"/>
                                </group>
                                <group name="documents_right">
                                    <field name="document_04"
                                           filename="document_04_name"
                                           string="Document #4"/>
                                    <field name="document_05"
                                           filename="document_05_name"
                                           string="Document #5"/>
                                    <field name="document_06"
                                           filename="document_06_name"
                                           string="Document #6"/>
                                </group>
                            </group>
                        </page>
                        <page name="resolution" string="Resolution"
                              attrs="{'invisible': [('is_rejected', '=', True)]}">
                            <group name="group_resolution">
                                <field name="resolution_text" nolabel="1"/>
                            </group>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"
                           groups="cim_complaints_channel.group_cim_user"/>
                    <field name="message_ids" widget="mail_thread"
                           groups="cim_complaints_channel.group_cim_user"/>
                </div>
            </form>
        </field>
    </record>

    <record id="cim_complaint_view_tree" model="ir.ui.view">
        <field name="name">cim.complaint.view.tree</field>
        <field name="model">cim.complaint</field>
        <field name="arch" type="xml">
            <tree class="o_cim_complaints_channel_complaint_view_tree"
                  default_order="name desc"
                  colors="darkgray:is_rejected==True;
                          orangered:is_acknowledgement_expired==True or deadline_state=='03_expirated' or deadline_state=='06_extended_expirated';
                          chocolate:is_acknowledgement_expired==False and (deadline_state=='02_upcoming_expiration' or deadline_state=='05_extended_upcoming_expiration')">
                <field name="is_rejected" invisible="1"/>
                <field name="is_acknowledgement_expired" invisible="1"/>
                <field name="deadline_state" invisible="1"/>
                <field name="name"
                       string="Code"/>
                <field name="complaint_type_id"
                       string="Type"/>
                <field name="issue"
                       string="Issue"/>
                <field name="resolution_date"
                       string="Res. Date"/>
                <field name="defendant_name"
                       string="Defendant"/>
                <field name="deadline_date"
                       string="Dead. Date"/>
                <field name="investigating_user_id"
                       string="Instructor"/>
                <field name="number_of_attachments"
                       string="N. attach."/>
                <field name="state"
                       string="State"/>
                <field name="icon_warning"
                       widget="image" string=" "/>
            </tree>
        </field>
    </record>

    <record id="cim_complaint_view_search" model="ir.ui.view">
        <field name="name">cim.complaint.view.search</field>
        <field name="model">cim.complaint</field>
        <field name="arch" type="xml">
            <search>
                <field name="issue" string="Issue"/>
                <field name="complaint_type_id" string="Type"/>
                <field name="name" string="Code"/>
                <field name="defendant_name" string="Defendant"/>
                <field name="complainant_name" string="Complainant"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="state" string="State"/>
                <field name="link_type_id" string="Link Type"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="complainant_email" string="Complainant Email"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="complainant_phone" string="Complainant Phone"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="complainant_vat" string="Complainant VAT"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="witness_name" string="Witnesses"
                       groups="cim_complaints_channel.group_cim_user"/>
                <field name="investigating_user_id" string="Instructor"/>
                <field name="investigating_user_id" string="Instructor"/>
                <filter string="Complaints pending attention and expired deadline"
                        name="is_acknowledgement_expired_yes"
                        domain="[('is_acknowledgement_expired', '=', True)]"/>
                <separator/>
                <filter string="Complaints received"
                        name="state_01_received"
                        domain="[('state', '=', '01_received')]"/>
                <filter string="Complaints admitted"
                        name="state_02_admitted"
                        domain="[('state', '=', '02_admitted')]"/>
                <filter string="Complaints in progress"
                        name="state_03_in_progress"
                        domain="[('state', '=', '03_in_progress')]"/>
                <filter string="Complaints ready for resolution"
                        name="state_04_ready"
                        domain="[('state', '=', '04_ready')]"/>
                <filter string="Complaints resolved"
                        name="state_05_resolved"
                        domain="[('state', '=', '05_resolved')]"/>
                <separator/>
                <filter string="Minor infringements"
                        name="infringement_level_01_mild"
                        domain="[('infringement_level', '=', '01_mild')]"/>
                <filter string="Serious infringements"
                        name="infringement_level_02_serious"
                        domain="[('infringement_level', '=', '02_serious')]"/>
                <filter string="Very serious infringements"
                        name="infringement_level_03_very_serious"
                        domain="[('infringement_level', '=', '03_very_serious')]"/>
                <separator/>
                <filter string="Anonymous complaints"
                        name="is_anonymous_yes"
                        domain="[('is_anonymous', '=', True)]"
                        groups="cim_complaints_channel.group_cim_user"/>
                <filter string="Non-Anonymous complaints"
                        name="is_anonymous_no"
                        domain="[('is_anonymous', '=', False)]"
                        groups="cim_complaints_channel.group_cim_user"/>
                <separator groups="cim_complaints_channel.group_cim_user"/>
                <filter string="Accepted complaints"
                        name="is_rejected_no"
                        domain="[('is_rejected', '=', False)]"/>
                <filter string="Rejected complaints"
                        name="is_rejected_yes"
                        domain="[('is_rejected', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="State"
                            name="grouped_state"
                     context="{'group_by':'state'}"/>
                    <filter string="Resolution Date"
                            name="grouped_resolution_date"
                     context="{'group_by':'resolution_date'}"/>
                    <filter string="Infringement Level"
                            name="grouped_infringement_level"
                     context="{'group_by':'infringement_level'}"/>

                    <filter string="Instructor"
                            name="grouped_investigating_user_id"
                     context="{'group_by':'investigating_user_id'}"/>

                    <filter string="Complaint Type"
                            name="grouped_complaint_type_id"
                     context="{'group_by':'complaint_type_id'}"/>

                    <filter string="Link Type"
                            name="grouped_link_type_id"
                     context="{'group_by':'link_type_id'}"/>
                    <filter string="Complaint Frequency"
                            name="grouped_complaint_frequency"
                     context="{'group_by':'complaint_frequency'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="cim_complaint_view_calendar" model="ir.ui.view">
        <field name="name">Complaints (calendar view)</field>
        <field name="model">cim.complaint</field>
        <field name="arch" type="xml">
            <calendar date_start="creation_date"
                      date_stop="expected_resolution_date"
                      color="complaint_type_id"
                      mode="month"
                      display="[summary_info]"
                      quick_add="false">
                <field name="summary_info"/>
            </calendar>
        </field>
    </record>

    <record id="cim_complaint_action"
            model="ir.actions.act_window">
        <field name="name">Complaints</field>
        <field name="res_model">cim.complaint</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="view_ids"
         eval="[(5, 0),
                (0, 0, {'view_mode': 'tree',
                        'view_id': ref('cim_complaint_view_tree')}),
                (0, 0, {'view_mode': 'form',
                        'view_id': ref('cim_complaint_view_form')}),
                (0, 0, {'view_mode': 'calendar',
                        'view_id': ref('cim_complaint_view_calendar')})]"/>
        <field name="search_view_id" ref="cim_complaint_view_search"/>
        <field name="context">{'default_is_delegated': True, }</field>
    </record>

    <menuitem id="complaint_normal_menu"
              name="Complaints"
              parent="complaint_menu"
              sequence="1"
              action="cim_complaint_action"/>

</odoo>