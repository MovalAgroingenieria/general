<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cim_complaint_type_view_form" model="ir.ui.view">
        <field name="name">cim.complaint.type.view.form</field>
        <field name="model">cim.complaint.type</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <field name='is_standard' invisible="1"/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_complaints"
                                type="object" class="oe_stat_button"
                                icon="fa-exclamation-triangle">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="number_of_complaints"/>
                                </span>
                                <span class="o_stat_text">complaints</span>
                            </div>
                        </button>
                    </div>
                    <div name="title">
                        <label for="name" string="Complaint Type:"/>
                        <h1>
                             <field name="name" style="margin-top:5px"/>
                        </h1>
                        <div attrs="{'invisible':[('is_standard','=',False)]}">
                            <span style="font-weight:bold;">
                            ( STANDARD TYPE )
                            </span>
                        </div>
                    </div>
                    <group name="master_data">
                        <group name="master_data_left">
                        </group>
                        <group name="master_data_right">
                        </group>
                    </group>
                    <group name="slave_data">
                        <notebook name="slave_data_notebook">
                            <page name="notes" string="Notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cim_complaint_type_view_tree" model="ir.ui.view">
        <field name="name">cim.complaint.type.view.tree</field>
        <field name="model">cim.complaint.type</field>
        <field name="arch" type="xml">
            <tree class="o_cim_complaints_channel_complaint_type_view_tree">
                <field name="name"
                       string="Name"/>
                <field name="is_standard"
                       string="Standard"/>
                <field name="number_of_complaints"
                       string="N. complaints"/>
                <field name="notes_text"
                       string="Notes"/>
            </tree>
        </field>
    </record>

    <record id="cim_complaint_type_view_search" model="ir.ui.view">
        <field name="name">cim.complaint.type.view.search</field>
        <field name="model">cim.complaint.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>

    <record id="cim_complaint_type_view_kanban" model="ir.ui.view">
        <field name="name">cim.complaint.type.view.kanban</field>
        <field name="model">cim.complaint.type</field>
        <field name="arch" type="xml">
            <kanban class="o_type_kanban_view">
                <field name="name"/>
                <field name="number_of_complaints"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(2)} o_type_left">
                                <div class="o_number_of_items"><t t-esc="record.number_of_complaints.raw_value"/></div>
                                <div>complaints</div>
                            </div>
                            <div class="o_type_right">
                                <h4><field name="name"/></h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="cim_complaint_type_action"
            model="ir.actions.act_window">
        <field name="name">Types of complaint</field>
        <field name="res_model">cim.complaint.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids"
         eval="[(5, 0),
                (0, 0, {'view_mode': 'kanban',
                        'view_id': ref('cim_complaint_type_view_kanban')}),
                (0, 0, {'view_mode': 'tree',
                        'view_id': ref('cim_complaint_type_view_tree')}),
                (0, 0, {'view_mode': 'form',
                        'view_id': ref('cim_complaint_type_view_form')})]"/>
        <field name="search_view_id" ref="cim_complaint_type_view_search"/>
    </record>

    <menuitem id="complaint_type_menu"
              name="Complaint Types"
              parent="configuration_menu"
              sequence="2"
              action="cim_complaint_type_action"/>

</odoo>