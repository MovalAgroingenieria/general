<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form view -->
    <record id="dipucr_bank_payment_line_form" model="ir.ui.view">
        <field name="name">dipucr.bank.payment.line.form</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="dipucr_ref"/>
               <field name="dipucr_sent"/>
            </field>
        </field>
    </record>

    <!-- Tree view -->
    <record id="dipucr_bank_payment_line_tree" model="ir.ui.view">
        <field name="name">dipucr.bank.payment.line.tree</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
               <field name="dipucr_ref"/>
               <field name="dipucr_sent" invisible="1"/>
            </field>
        </field>
    </record>

    <!-- Search view -->
    <record id="dipucr_payment_line_search" model="ir.ui.view">
        <field name="name">dipucr.payment.line.search</field>
        <field name="model">bank.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.bank_payment_line_search"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
               <field name="dipucr_ref"/>
               <field name="dipucr_sent"/>
               <filter name="dipucr_filter" string="DipuCR" domain="[('dipucr_sent','=', True)]"/> 
            </field>
        </field>
    </record>

</odoo>