<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add product description form view (Operations tab) -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form.d</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet//field[@name='pack_operation_product_ids']/tree//field[@name='product_id']" position="after">
                <field name="name_from_sale_order_line"/>
            </xpath>
        </field>
    </record>

    <!-- Add the product description in form view (Initial Request tab) -->
    <record id="view_move_picking_tree" model="ir.ui.view">
        <field name="name">stock.move.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="name"></field>
            </xpath>
        </field>
    </record>

    <!-- Change menuitem title and file name -->
    <record id="stock.action_report_delivery" model="ir.actions.report.xml">
        <field name="name">Delivery Slip Modified</field>
        <field name="print_report_name">('Albaran_'+ object.name +'.pdf')</field>
    </record>

</odoo>
