<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_attendance.view_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="groups_id" eval="[(4, ref('hr_attendance.group_hr_attendance'))]"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="edit">1</attribute>
                <attribute name="editable">bottom</attribute>
            </tree>
        </field>
    </record>

    <menuitem id="hr_attendance.menu_hr_attendance_manage_attendances"
        name="Manager"
        parent="hr_attendance.menu_hr_attendance_root"
        sequence="20"
        groups="hr_attendance.group_hr_attendance"/>

    <menuitem id="hr_attendance.menu_hr_attendance_view_attendances"
        name="Attendances"
        parent="hr_attendance.menu_hr_attendance_manage_attendances"
        sequence="10"
        groups="hr_attendance.group_hr_attendance"
        action="hr_attendance.hr_attendance_action"/>

</odoo>
