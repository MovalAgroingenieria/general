<odoo>
    <record id="ir_cron_form_view" model="ir.ui.view">
        <field name="name">ir.cron.form.view.inherit</field>
        <field name="model">ir.cron</field>
        <field name="inherit_id" ref="base.ir_cron_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='interval_type']" position="after">
                <field name="excluded_days" />
            </xpath>
        </field>
    </record>
</odoo>
