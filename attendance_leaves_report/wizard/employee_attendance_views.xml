<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="form_employee_attendance" model="ir.ui.view">
        <field name="name">form.employee.attendance</field>
        <field name="model">employee.attendance.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="number_of_selected_employees"/>
                </group>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="print_employee_attendance_report" type="object" class="oe_highlight">
                        <div class="o_form_field">
                            <span class="fa fa-print"/>
                            <span style="margin-left:8px;">Print</span>
                        </div>
                    </button>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_employee_attendance" model="ir.actions.act_window">
        <field name="name">Employee Attendance / Leaves Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.attendance.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="form_employee_attendance"/>
        <field name="target">new</field>
    </record>

    <!-- Droplist action -->
    <act_window id="action_employee_attendance"
        name="Employee Attendance/Leaves Report"
        res_model="employee.attendance.wizard"
        src_model="hr.employee"
        key2="client_action_multi"
        view_mode="form" target="new" view_type="form"
        groups="hr.group_hr_manager"/>

</odoo>